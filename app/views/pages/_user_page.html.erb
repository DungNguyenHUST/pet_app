<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0"/>
    </head>

    <body>
        <div class='container'>
            <div class='user_dasboard'>
                <div class='user_title'>
                    <span href="<%=user_path(current_user)%>">Xin chào, <%=current_user.name%></span>
                </div>

                <div class="user_tab_link">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#PersonalID">Thông tin cá nhân</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#CVID">Cover Letter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#JobID">Việc làm đã ứng tuyển</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#CompanyID">Công ty đang theo dõi</a>
                        </li>
                    </ul>
                </div>

                <div class="user_tab_content">
                    <div class="tab-content">
                        <div role="tabpanel" id="PersonalID" class="tab-pane fade in active"><br>
                            <div class="user_personal_tab">
                                <div class="user_info">
                                    <div class="user_info_des_label">
                                        <strong> Thông tin tài khoản</strong>
                                    </div>

                                    <div class="user_info_about">

                                        <div class="user_info_label">
                                            <strong>Tên tài khoản:</strong>
                                        </div>

                                        <div class="user_info_des">
                                            <%=current_user.name %>
                                        </div>

                                        <div class="user_info_edit_button">
                                            <i class="fa fa-edit"></i> <%= link_to " Thay đổi tên đăng nhập", edit_user_path(current_user), class: "user_info_edit_link_to" %>
                                        </div>

                                        <div class="user_info_label">
                                            <strong>Địa chỉ email:</strong>
                                        </div>

                                        <div class="user_info_des">
                                            <%=current_user.email %>
                                        </div>

                                        <div class="user_info_edit_button">
                                            <i class="fa fa-edit"></i><%= link_to " Thay đổi địa chỉ email", edit_user_path(current_user), class: "user_info_edit_link_to"  %>
                                        </div>

                                        <div class="user_info_label">
                                            <strong>Mật khẩu:</strong>
                                        </div>

                                        <div class="user_info_des">
                                            <%=current_user.password_digest, type="********"%> 
                                        </div>

                                        <div class="user_info_edit_button">
                                            <i class="fa fa-edit"></i><%= link_to " Thay đổi mật khẩu", edit_user_path(current_user), class: "user_info_edit_link_to"  %>
                                        </div>

                                        <div class="user_info_label">
                                            <strong>Số điện thoại liên lạc:</strong>
                                        </div>

                                        <div class="user_info_des">
                                            <%=current_user.phone %>
                                        </div>

                                        <div class="user_info_edit_button">
                                            <i class="fa fa-edit"></i><%= link_to " Thay đổi số điện thoại", edit_user_path(current_user), class: "user_info_edit_link_to"  %>
                                        </div>

                                        <div class="user_info_label">
                                            <strong>Địa chỉ liên hệ:</strong>
                                        </div>

                                        <div class="user_info_des">
                                            <%=current_user.address %>
                                        </div>

                                        <div class="user_info_edit_button">
                                            <i class="fa fa-edit"></i><%= link_to " Thay đổi địa chỉ", edit_user_path(current_user), class: "user_info_edit_link_to"  %>
                                        </div>
                                    </div>

                                    <div class="user_log_out">
                                        <%= link_to '<button type="submit">Đăng xuất</button>'.html_safe, logout_path(current_user) %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" id="CVID" class="tab-pane"><br>
                            <div class="user_cv_tab">
                                <div class="user_cover_letter_label">
                                    <strong>Giới thiệu bản thân</strong>
                                </div>

                                <div class="user_cover_letter">
                                    <div class="user_cv_des">
                                        <%=current_user.cover_letter %>
                                    </div>

                                    <div class="user_info_edit_button">
                                        <i class="fa fa-upload"></i><%= link_to " Tải CV lên", edit_user_path(current_user), class: "user_info_edit_link_to"  %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" id="JobID" class="tab-pane"><br>
                            <div class="user_job_tab">
                            </div>
                        </div>

                        <div role="tabpanel" id="FollowCompanyID" class="tab-pane"><br>
                            <div class="user_follow_company_tab">
                            </div>
                        </div>
                    </div>
                </div>

                <script type="text/javascript">
                    $(function() { 
                        $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                            localStorage.setItem('lastTab', $(this).attr('href'));
                        });

                        var lastTab = localStorage.getItem('lastTab');
                        if (lastTab) {
                            $('[href="' + lastTab + '"]').tab('show');
                        }
                    });
                </script>
            </div>
        </div>
    </body>
</html>