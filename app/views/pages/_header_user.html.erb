<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Main Header</title>
	</head>

	<body>
	
		<div id="navbar">
			<div class="body_content_header_user">
				<header class="header_user_area">
					<div class="header_user_content">
						<div class="header_user_logo">
							<a href="<%=pages_path %>"><span><i class="material-icons">near_me</i>NICE</span></a>
						</div>
						
						<div class="header_user_navigation" >
							<nav>
								<a href="<%=pages_path %>">Tìm việc </a>
								<a href="<%=companies_path %>">Review công ty </a>
								<a href="<%=problems_path %>">Câu hỏi </a>
								<a href="<%=posts_path %>">Blog</a>
							</nav>
						</div>

						<div class="header_user_button">
							<%= form_for :session, url: login_path do |f| %>
								<div class="user_icon_button">
									<%= link_to '<button <i class="material-icons">person_outline</i> </button>'.html_safe, user_path(current_user) %>
								</div>
							<% end %>
						</div>
					</div>
				</header>
			</div>
		</div>
		
		<script>
			// When the user scrolls down 20px from the top of the document, slide down the navbar
			window.onscroll = function() {scrollFunction()};

			function scrollFunction() {
			if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
				document.getElementById("navbar").style.top = "0";
			} else {
				document.getElementById("navbar").style.top = "-50px";
			}
			}
		</script>
	</body>
</html>