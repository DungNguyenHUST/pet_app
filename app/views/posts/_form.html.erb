<%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>

<%# Show error %>
  <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "Lỗi") %> đã xảy ra lỗi khi lưu bài viết:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<%# Show editor content %>
  <div class="container">
    <div class="sessions">
    </div>
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <h2 class="form-title">Tạo bài viết mới</h2>
                    <div class="form-group">
                        <%= f.label :title, "Title", class: "col-md-2 control-label" %>
                        <div class="col-md-6">
                        <%= f.text_field :title, class: "form-input", placeholder: "Nhập tiêu đề bài viết" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :content, "Nội dung", class: "col-md-2 control-label" %>
                        <div class="col-md-6">
                        <%= f.text_field :content, class: "form-input-content", placeholder: "Nhập nội dung bài viết" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-4">
                        <%= f.submit "Post", class: "form-submit" %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<% end %>
