<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0"/>
		<% set_meta_tags title: @post.title, description: @post.content%>
    </head>

    <body>
        <div class="container">
            <%- model_class = Post -%>
                <div class="post_area">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="post_area_left">
                                <div class="post_title">
                                    <strong><%=@post.title%></strong>
                                </div>
                                <div class="post_info">
                                    <i class="material-icons-outlined">person_outline</i><span><%=@post.username%></span>
                                    <i class="material-icons-outlined">chat_bubble_outline</i><span><%=@post.post_comments.count%></span> 
                                    <i class="material-icons-outlined">history_toggle_off</i><span><%=time_ago_in_words(@post.created_at)%></span>
                                </div>
                                <div class="post_content">
                                    <span><%=@post.content.html_safe%></span>
                                </div>

                                <div class="post_count">
                                    <span><%= @post.post_comments.count%> Bình luận</span>
                                </div>

                                <%= form_for [@post, PostComment.new] do |f| %>
                                    <div class="new_post_show_comment_section">
                                        <div class="new_post_show_comment_input">
                                            <%= f.text_area :comment_content, class: "form-control-text", placeholder: "Nhập bình luận" %>
                                        </div>
                                    </div>

                                    <div class="new_post_show_comment_submit">
                                        <%= f.submit "Gửi bình luận", class: "new_post_comment_form_submit" %>
                                    </div>
                                <%end%>
                                <div class="post_comment">
                                    <%= render @post.post_comments %>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="post_area_right">
                                <div class="post_area_right_title">
                                    <span>Xem thêm</span>
                                </div>
                                <% @posts.each do |post| %>
                                    <%if post.approved?%>
                                        <div class="post_container">
                                            <div class="post_left">
                                                <%if post.wall_picture?%>
                                                    <%= link_to (image_tag(post.wall_picture.medium.url)), image_path(url_for(post.wall_picture.medium.url)), rel: "gallery" , :href => post_path(post)%>
                                                <%else%>
                                                    <img src="<%= "/assets/illustration.png" %>" alt="Snow" style="width:100%;">
                                                <%end%>
                                            </div>

                                            <div class="post_right">
                                                <div class="post_header">
                                                    <strong><%= link_to (post.title), post_path(post) %></strong>
                                                </div>

                                                <div class="post_info">
                                                    <div class="post_username">
                                                        <strong><%=post.username%></strong> . <span><%=time_ago_in_words(post.created_at)%></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <%end%>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </body>
</html>
