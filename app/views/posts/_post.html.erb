<div class="post_block">
    <div class="post_left">
        <div class="post_cover">
            <%if post.wall_picture?%>
                <%= link_to (image_tag(post.wall_picture.medium.url)), image_path(url_for(post.wall_picture.medium.url)), rel: "gallery" , :href => post_path(post), target: :_blank%>
            <%else%>
                <%= link_to (image_tag("defaults/post_default.svg")), image_path(url_for("defaults/post_default.svg")), rel: "gallery" , :href => post_path(post), target: :_blank%>
            <%end%>
        </div>
    </div>

    <div class="post_right">
        <div class="post_header">
            <a><%= link_to (truncate(strip_tags(post.title), length: 60)), post_path(post), target: :_blank %></a>
        </div>

        <div class="post_info">
            <div class="post_category_info">
                <%post_category=''%>
                <%if(post.category.to_i == 1) %>
                    <% post_category = t(:career_way) %>
                <% elsif (post.category.to_i == 2) %>
                    <% post_category = t(:science_and_tech) %>
                <% elsif (post.category.to_i == 3) %>
                    <% post_category = t(:blog) %>
                <% else %>
                    <% post_category = t(:other) %>
                <%end%>
                <div class="post_category">
                    <a><%= post_category %></a>
                </div>
            </div>
            <div class="post_comment">
                <a><i class="material-icons-outlined">chat_bubble_outline</i><span><%=post.post_comments.count%></span></a>
            </div>
            <div class="post_time">
                <span><%=post.created_at.strftime("%B %d, %Y")%></span>
            </div>
        </div>

        <div class="post_content">
            <a><%=truncate(strip_tags(post.content), length: 100)%></a>
        </div>

        <div class="post_view">
            <%= link_to post_path(post) do%>
                <button type="submit"> <%t(:read_more)%> <i class="material-icons-outlined">chevron_right</i></button>
            <%end%>
        </div>
    </div>
</div>