                    <%end%>
                </div>
            </div>

            <div class="user_reply_interview_cotent">

                <div class="user_reply_interview_body">
                    <t><%= company_reply_interview.reply_content %></t>
                </div>

                <div class="user_reply_interview_time">
                    <t><%= company_reply_interview.user_name %> l√∫c <%= time_ago_in_words(company_reply_interview.created_at) %></t>
                </div>
