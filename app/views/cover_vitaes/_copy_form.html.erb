<div class="container">
    <div class ="row justify-content-center">
        <div class="col-sm-8">
            <div class="new_copy_cover_vitae_form">
                <%= form_for @cover_vitae, :html => { :class => "form-horizontal post" } do |f| %>
                    <div class="new_copy_cover_vitae_section">
                        <div class="new_copy_cover_vitae_content">
                            <div class="new_copy_cover_vitae_input">
                                <%= f.text_field :title, :required => true, value: @cover_vitae.title, class: "form-control", placeholder: " Nhập tên CV của bạn" %>
                            </div>
                        </div>

                        <div class="new_copy_cover_vitae_content">
                            <div class="new_copy_cover_vitae_input">
                                <%if @cv_copy%>
                                    <%= f.text_area :detail, :class => "tinymce", value: @cv_copy.detail%>
                                <%else%>
                                    <%= f.text_area :detail, :class => "tinymce", value: @cover_vitae.detail%>
                                <%end%>
                                <%= tinymce :default %>
                            </div>
                        </div>
                        <%if @cv_copy%>
                            <%= f.hidden_field :origin_id, :value => @cv_copy.id %>
                        <%end%>
                    </div>

                    <div class="new_copy_cover_vitae_submit">
                        <%= f.submit t(:save_my_cv), class: "new_copy_cover_vitae_form_submit" %>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>