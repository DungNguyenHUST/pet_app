                    <%= paginate @cover_vitaes_eng, window: 2%>
                </div>
            <%end%>

            <%if @tab == "CVIndexVEIID"%>
                <div class="cover_vitae_index_vei_tab">
                    <div class="row">
                        <%@cover_vitaes_vie.each do |cover_vitae|%>
