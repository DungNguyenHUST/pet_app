<div class="cv_copy_show_block">
    <div class="container">
        <div class ="row justify-content-center">
            <div class="col-sm-8">
                <%if @cover_vitae.title%>
                    <div class="cv_copy_show_title">
                        <a><%=@cover_vitae.title%></a>
                    </div>
                <%end%>
                
                <div class="cv_copy_show_detail">
                    <%=@cover_vitae.detail.html_safe%>
                </div>

                <%if user_signed_in?%>
                    <div class="cv_copy_show_action">
                        <div class="cv_copy_show_primary" id="primary_cover_vitae_<%=@cover_vitae.id%>">
                            <%if @cover_vitae.primary%>
                                <%= link_to set_primary_cover_viate_path(:id => @cover_vitae.id), remote: :true do%>
                                    <button class="highlight_btn" type="submit"><i class="material-icons">done</i><span><%=t(:default_cv)%></span></button>
                                <%end%>
                            <%else%>                                    
                                <%= link_to set_primary_cover_viate_path(:id => @cover_vitae.id), remote: :true do%>
                                    <button type="submit"><i class="material-icons">done</i><span><%=t(:set_default_cv)%></span></button>
                                <%end%>
                            <%end%>
                        </div>
                        <div class="cv_copy_show_edit">
                            <%= link_to edit_cover_vitae_path(@cover_vitae) do%>
                                <button type="submit"><i class="material-icons">edit</i><span><%=t(:edit)%></span></button>
                            <%end%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>