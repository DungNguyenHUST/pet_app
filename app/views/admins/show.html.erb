                    <%if @tab == "AdminScrapJobID"%>
                        <div class="admin_tab">
                            <div class="new_admin_action">
                                <%= link_to new_scrap_job_path do%>
                                    <button type="submit"><%=t(:create_new)%></button> 
                                <%end%>
                            </div>
                            <div class="admin_table">
                                <div class="table-responsive">
                                    <table class="table text-center table-hover">
                                        <thead>
                                            <tr>
                                                <th style="width: 2%;">No.</th>
                                                <th style="width: 25%;">Url</th>
                                                <th style="width: 8%;">Site</th>
                                                <th style="width: 8%;">Total Page</th>
                                                <th style="width: 10%;"><%=t(:created_date)%></th>
                                                <th style="width: 10%;"><%=t(:last_updated)%></th>
                                                <th style="width: 16%;"><%=t(:action)%></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <%@scrap_jobs.each_with_index do |scrap_job, index|%>
                                                <tr>
                                                    <td><%=index + 1%></td>
                                                    <td scope="row" class="text-start"><%=link_to truncate(strip_tags(scrap_job.url), length: 60), scrap_job_path(:id => scrap_job.id)%></td>
                                                    <%if JobCrawler::split_domain_name(scrap_job.url).present?%>
                                                        <td><%=JobCrawler::split_domain_name(scrap_job.url).upcase%></td>
                                                    <%else%>
                                                        <td>---</td>
                                                    <%end%>
                                                    <td><%=scrap_job.page_num%></td>
                                                    <td><%=scrap_job.created_at.strftime("%B %d, %Y")%></td>
                                                    <td><%=scrap_job.updated_at.strftime("%B %d, %Y")%></td>
                                                    <td>
                                                        <%= link_to 'Process', scrap_jobs_processing_path(:id => scrap_job.id), method: :get, class: "admin_approving"%>
                                                        <%= link_to t(:view), scrap_job_path(scrap_job), method: :get, class: "admin_preview" %>
                                                        <%= link_to t(:edit), edit_scrap_job_path(scrap_job, :is_edit => true), method: :get, class: "admin_edit" %>
                                                        <%= link_to t(:delete), scrap_job_path(scrap_job), method: :delete, class: "admin_delete", data: { confirm: t(:are_you_sure) } %>
                                                    </td>
                                                </tr>
                                            <%end%>
                                        </tbody>
                                    </table>
                                </div>
                                <%= paginate @scrap_jobs, window: 2%>
                            </div>
                        </div>  

                        <div class="scrap_jobs_total_day">
                            <a><%=t(:total)%> <%=t(:today).downcase%> </span><%=CompanyJob.where(:created_at => Time.zone.now.beginning_of_day..Time.zone.now.end_of_day).count%></span></a>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="scrap_jobs_all_btn">
                                    <%= link_to '<button type="submit">Process All</button>'.html_safe, scrap_jobs_processing_path(:all => true), method: :get%>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="scrap_jobs_tab_bottom">
                                    <%= link_to '<button type="submit">Job Magic</button>'.html_safe, scrap_jobs_push_path%>
                                </div>
                            </div>
                        </div>
                    <%end%>

                    <%if @tab == "AdminScrapReviewID"%>
                        <%@scrap_review = ScrapReview.new%>
                        <%= render :partial => 'scrap_reviews/form', :local => @scrap_review %>
                    <%end%>

                    <%if @tab == "AdminCoverVitaeID"%>
                        <%@cover_vitae = CoverVitae.new%>
                        <%= render :partial => 'cover_vitaes/form', :local => @cover_vitae %>
                    <%end%>
                </div>
            </div>
        </div>
    </div>
</div>