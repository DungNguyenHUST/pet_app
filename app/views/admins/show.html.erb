                                <div class="admin_employer_section">
                                    <%if employer_bill.confirmed == true%>
                                        <div class="admin_employer_bill_confirm">
                                            <span><%=t(:confirmed)%></span><i class="material-icons-outlined">check_circle</i>
                                        </div>
                                    <%end%>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="admin_employer_bill_detail">
