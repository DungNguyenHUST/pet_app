                                                    <%=image_tag(employer_bill.bill_image.url)%>
                                                <%end%>
                                                <a><%=t(:send_date)%>: <%=employer_bill.employer.created_at%></a>
                                                <br>
                                                <a><%=t(:sender)%>: <%=employer_bill.employer.name%></a>
                                                <br>
                                                <a><%=t(:employer_id)%>: <%=employer_bill.employer.id%> - <%=employer_bill.employer.email%></a>
