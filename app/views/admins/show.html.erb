<div class="container">
    <div class='admin_dasboard'>
        <div class='admin_title'>
            <%if (0..12).cover? Time.now.hour %>
                <span>Good morning, <%=current_admin.name%>!</span>
            <%elsif (12..18).cover? Time.now.hour %>
                <span>Good afternoon, <%=current_admin.name%>!</span>
            <%elsif (18..24).cover? Time.now.hour %>
                <span>Good evening, <%=current_admin.name%>!</span>
            <%end%>
        </div>

        <div class="admin_log_out">
            <%= button_to destroy_admin_session_path, method: :delete, class: "btn btn-danger" do%>
                <span>Đăng xuất</span>
            <%end%>
        </div>

        <div class="admin_log_out">
            <%= button_to rails_admin_path, method: :get, class: "btn btn-warning" do%>
                <span>Go Dashboard</span>
            <%end%>
        </div>

        <div class="admin_tab_link">
            <ul class="nav">
                <li class="nav-item">
                    <%if @tab == "default" || @tab == "AdminCompanyID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                 
                    <a class="nav-link <%=active%>" href="<%=admin_path(current_admin, tab: 'AdminCompanyID')%>"><i class="material-icons-outlined">business</i>Company <span><%= (@companies.total_count)%><span></a>
                </li>
                <li class="nav-item">
                    <%if @tab == "AdminJobID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                 
                    <a class="nav-link <%=active%>" href="<%=admin_path(current_admin, tab: 'AdminJobID')%>"><i class="material-icons-outlined">work_outline</i>Job <span><%= (@company_jobs.total_count)%><span></a>
                </li>
                <li class="nav-item">
                    <%if @tab == "AdminUserID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=admin_path(current_admin, tab: 'AdminUserID')%>"><i class="material-icons-outlined">person</i>User <span><%= (@users.total_count)%><span></a>
                </li>
                <li class="nav-item">
                    <%if @tab == "AdminPostID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=admin_path(current_admin, tab: 'AdminPostID')%>"><i class="material-icons-outlined">post_add</i>Post <span><%= (@posts.total_count)%><span></a>
                </li>
                <li class="nav-item">
                    <%if @tab == "AdminProblemID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=admin_path(current_admin, tab: 'AdminProblemID')%>"><i class="material-icons-outlined">lightbulb</i>Problem <span><%= (@problems.total_count)%><span></a>
                </li>
                <li class="nav-item">
                    <%if @tab == "EmployerID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=admin_path(current_admin, tab: 'EmployerID')%>"><i class="material-icons-outlined">people</i>Employer <span><%= (@employers.total_count)%><span></a>
                </li>
                <li class="nav-item">
                    <%if @tab == "ScrapJobID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=admin_path(current_admin, tab: 'ScrapJobID')%>"><i class="material-icons-outlined">smart_toy</i>Job Scraper</a>
                </li>
                <li class="nav-item">
                    <%if @tab == "ScrapReviewID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=admin_path(current_admin, tab: 'ScrapReviewID')%>"><i class="material-icons-outlined">star_border</i>Review Scraper</a>
                </li>
                <li class="nav-item">
                    <%if @tab == "CoverVitaeID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=admin_path(current_admin, tab: 'CoverVitaeID')%>"><i class="material-icons-outlined">auto_fix_high</i>CV Creater</a>
                </li>
            </ul>
        </div>

        <div class="admin_tab_content">
            <%if @tab == "default" || @tab == "AdminCompanyID"%>
                <div class="admin_company_tab">
                    <div class="new_admin_company">
                        <%= link_to '<button type="submit">Tạo công ty mới</button>'.html_safe, new_company_path%>
                    </div>
                </div>                        
            <%end%>

            <%if @tab == "AdminJobID"%>
                <div class="admin_job_tab">
                    <div class="new_admin_job">
                        <%= link_to '<button type="submit">Tạo việc làm mới</button>'.html_safe, new_company_job_path%>
                    </div>
                </div>                        
            <%end%>

            <%if @tab == "AdminUserID"%>
                <div class="admin_user_tab">
                </div>                        
            <%end%>

            <%if @tab == "AdminPostID"%>
                <div class="admin_post_tab">
                    <div class="new_post">
                        <%= link_to '<button type="submit">Tạo post mới</button>'.html_safe, new_post_path%>
                    </div>
                </div>                        
            <%end%>

            <%if @tab == "AdminProblemID"%>
                <div class="admin_problem_tab">
                    <div class="new_problem">
                        <%= link_to '<button type="submit">Tạo câu hỏi mới</button>'.html_safe, new_problem_path%>
                    </div>
                </div>                        
            <%end%>

            <%if @tab == "AdminEmployerID"%>
                <div class="admin_employer_tab">
                    <div class="new_employer">
                    </div>
                </div>                        
            <%end%>

            <%if @tab == "NotificationID"%>
                <div class="admin_notification_tab">
                </div>
            <%end%>

            <%if @tab == "ScrapJobID"%>
                <div class="scrap_jobs_tab">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="scrap_jobs_tab_top">
                                <%@scrap_job = ScrapJob.new%>
                                <%= render :partial => 'scrap_jobs/form', :local => @scrap_job %>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="scrap_jobs_tab_bottom">
                                <%= link_to '<button type="submit">Job Magic</button>'.html_safe, jobs_push_path%>
                            </div>
                        </div>
                    </div>
                </div>
            <%end%>

            <%if @tab == "ScrapReviewID"%>
                <%@scrap_review = ScrapReview.new%>
                <%= render :partial => 'scrap_reviews/form', :local => @scrap_review %>
            <%end%>

            <%if @tab == "CoverVitaeID"%>
                <%@cover_vitae = CoverVitae.new%>
                <%= render :partial => 'cover_vitaes/form', :local => @cover_vitae %>
            <%end%>
        </div>
    </div>
</div>