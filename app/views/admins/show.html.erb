                                                    <div class="new_employer_bill_input">
                                                        <%= f.number_field :total_cash, class: "form-control"%>
                                                    </div>
                                                </div>
                                                <div class="new_employer_bill_content">
                                                    <div class="new_employer_bill_label">
                                                        <a><%= f.label :confirmed, t(:confirm), class: "new_employer_bill_label" %></a>
                                                    </div>
                                                    
                                                    <div class="new_employer_bill_input">
                                                        <%= f.select(:confirmed, options_for_select([[t(:no), false], [t(:yes), true]]), {include_blank: false}, { :class => 'form-select' }) %>
