<div class='admin_signin_container'>
    <div class="container">
        <div class='admin_signin_block'>
            <div class="admin_signin_label">
                <div class="admin_signin_title">
                    <a><%=t(:admin_login)%></a>
                    <i class="material-icons-outlined">admin_panel_settings</i>
                </div>
            </div>

            <div class="admin_signin_form_left">
                <%= render "admins/shared/error_messages", resource: resource %>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="admin_signin_content">
                        <div class="admin_signin_label">
                            <a><%= f.label :email, t(:email), class: "admin_signin_label_name" %></a>
                        </div>

                        <div class="admin_signin_input">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", :required => true, class: "form-control", placeholder: t(:enter_email) %>
                        </div>
                    </div>

                    <div class="admin_signin_content">
                        <div class="admin_signin_label">
                            <a><%= f.label :password, t(:password), class: "admin_signin_label" %></a>
                        </div>

                        <div class="admin_signin_input">
                            <%= f.password_field :password, autocomplete: "current-password", :required => true, class: "form-control", placeholder: t(:enter_password) %>
                        </div>
                    </div>

                    <div class="admin_signin_submit">
                        <%= f.submit t(:signin), class: "admin_signin_form_submit" %>
                    </div>
                <%end%>
                <%# <%= link_to t(:signup), new_admin_registration_path%>
            </div>
        </div>
    </div>
</div>
