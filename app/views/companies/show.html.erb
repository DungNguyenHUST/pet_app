<%- model_class = Company -%>
<div class="company_area">

  <div class="section_company_name">
      <h2><%= @company.name %><h2>
  </div>

  <!-- Tab links -->
  <div class="tab">
    <button class="tablinks" onclick="openContent(event, 'Company')"><h3>Công ty</h3></button>
    <button class="tablinks" onclick="openContent(event, 'CompanyReviews')"><h3>Đánh giá công ty</h3></button>
    <button class="tablinks" onclick="openContent(event, 'CompanyInterviews')"><h3>Kinh nghiệm phỏng vấn</h3></button>
    <button class="tablinks" onclick="openContent(event, 'CompanyJobs')"><h3>Tuyển dụng</h3></button>
  </div>

  <!-- Tab content -->
  <div id="Company" class="tabcontent">
    <h3>Profile Công ty</h3>
    <%= render :partial => 'companies/profile' %>
  </div>

  <div id="CompanyReviews" class="tabcontent">
    <%= render :partial => 'companies/review_score' %>
    <h3><%= @company.company_reviews.count %> người đã đánh giá về công ty này</h3>
    <%= render @company.company_reviews %>
  </div>

  <div id="CompanyInterviews" class="tabcontent">
    <h3>Company Interview</h3>
    <%= render @company.company_interviews %>
  </div>

  <div id="CompanyJobs" class="tabcontent">
    <h3>Company Job</h3>
  </div>

  <script>
  function openContent(evt, cityName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(cityName).style.display = "block";
    evt.currentTarget.className += " active";
  }
  </script>

  <%# For admin %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
                companies_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_company_path(@company), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                company_path(@company),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>