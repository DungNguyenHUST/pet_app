<%= form_for @company, :html => { :class => "form-horizontal company" } do |f| %>

<%# Show error %>
  <% if @company.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@company.errors.count, "Lỗi") %> đã xảy ra lỗi khi lưu bài viết:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<%# Show editor content %>
  <div class="container">
    <div class="sessions">
    </div>
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <h2 class="form-title">Tạo công ty mới</h2>
                    <div class="form-group">
                        <%= f.label :name, "Tên công ty", class: "col-md-2 control-label" %>
                        <div class="col-md-6">
                        <%= f.text_field :name, class: "form-input", placeholder: "Nhập tên công ty" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :image, "Ảnh bìa", class: "col-md-2 control-label" %>
                        <div class="col-md-6">
                        <%= f.text_field :image, class: "form-input", placeholder: "Nhập image link" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :location, "Địa chỉ", class: "col-md-2 control-label" %>
                        <div class="col-md-6">
                        <%= f.text_field :location, class: "form-input", placeholder: "Nhập địa chỉ công ty" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :website, "Website công ty", class: "col-md-2 control-label" %>
                        <div class="col-md-6">
                        <%= f.text_field :website, class: "form-input", placeholder: "Nhập địa chỉ web công ty" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :size, "Số nhân viên", class: "col-md-2 control-label" %>
                        <div class="col-md-6">
                        <%= f.text_field :size, class: "form-input", placeholder: "Nhập số nhân viên" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :overview, "Mô tả chung", class: "col-md-2 control-label" %>
                        <div class="col-md-6">
                        <%= f.text_field :overview, class: "form-input", placeholder: "Nhập mô tả về công ty" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-4">
                        <%= f.submit "Submit", class: "form-submit" %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<% end %>