<div class="company_block">
    <div class="company_wall">
        <%if company.wall_picture?%>
            <%= link_to (image_tag(company.wall_picture.large.url)), image_path(url_for(company.wall_picture.large.url)), rel: "gallery" , :href => company_path(company), target: :_blank%>
        <%else%>
            <%= link_to (image_tag("company_wall_default.jpeg")), image_path(url_for("company_wall_default.jpeg")), rel: "gallery" , :href => company_path(company), target: :_blank%>
        <%end%>
    </div>

    <div class="company_thumbnail">
        <%if company.avatar?%>
            <%= link_to (image_tag(company.avatar.thumb.url)), image_path(url_for(company.avatar.thumb.url)), rel: "gallery" , :href => company_path(company), target: :_blank%>
        <%else%>
            <%= link_to (image_tag("company_avatar_default.png")), image_path(url_for("company_avatar_default.png")), rel: "gallery" , :href => company_path(company), target: :_blank%>
        <%end%>
    </div>

    <div class="company_title">
        <div class="company_name">
            <a> <%= link_to company.name, company_path(company), target: :_blank, class: "company_name_label" %></a>
        </div>

        <div class="company_rating">
            <%total_rate = cal_rating_review_total_score(company)%>
            <div class="review_score_star">
                <%if total_rate > 0%>
                    <%total_rate.to_i.times do%>
                        <i class="material-icons checked">circle</i>
                    <%end%>
                    <%(5 - total_rate.to_i).to_i.times do%>
                        <i class="material-icons checked_out">radio_button_unchecked</i>
                    <%end%>
                <%else%>
                    <%5.times do%>
                        <i class="material-icons checked_out">radio_button_unchecked</i>
                    <%end%>
                <%end%>
            </div>
        </div>
    
        <div class="company_love_button" id ="company_love_<%=company.id%>">
            <%if user_signed_in?%>
                <% pre_follow = company.company_follows.find { |follow| follow.user_id == current_user.id} %>
                <% if pre_follow %> 
                    <%= link_to '<button class="follow_btn_highlight">Đang theo dõi</button>'.html_safe, company_company_follow_path(company, pre_follow, type_param: 'mini'), remote: true, method: :delete%>
                <%else%>
                    <%= link_to '<button class="follow_btn">Theo dõi</button>'.html_safe, company_company_follows_path(company, type_param: 'mini'), remote: true, method: :post%>
                <%end%>
            <%else%>
                <button type="button" data-toggle="modal" data-target="#buttonModalLoginCenter" class="follow_btn">
                    Theo dõi
                </button>
            <%end%>
        </div>
    </div>

    <div class="company_overview">
        <%=truncate(strip_tags(company.overview), length: 90)%>
    </div>
    
    <div class="company_summary">
        <div class="company_point">
            <div class="review_point">
                <div class="company_point_content">
                    <a><%= company.company_reviews.count%></a>
                </div>
                <div class="company_point_label">
                    <a><%= link_to "Đánh giá", company_path(company, tab_id: 'CompanyReviewsID'), target: :_blank %></a>
                </div>
            </div>
            
            <div class="interview_point">
                <div class="company_point_content">
                    <a><%= company.company_interviews.count %></a>
                </div>
                <div class="company_point_label">
                    <a><%= link_to "Phỏng vấn", company_path(company, tab_id: 'CompanyInterviewsID'), target: :_blank %></a>
                </div>
            </div>
            
            <div class="job_point">
                <div class="company_point_content">
                    <a><%= find_job_of_company(company).count %></a>
                </div>
                <div class="company_point_label">
                    <a><%= link_to "Việc làm", company_path(company, tab_id: 'CompanyJobsID'), target: :_blank %></a>
                </div>
            </div>
        </div>
    </div>
</div>