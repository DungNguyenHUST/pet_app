<!doctype html>
<html>
    <head>
    <!-- Place your kit's code here -->
    <%# <script src="https://kit.fontawesome.com/afb6e3c4cc.js" crossorigin="anonymous"></script> %>
    </head>

    <body>
        <div class="company_profile">
            
            <div class="company_profile_category">
                <div class="company_profile_icon">
                    <span class="company_profile__icon"><i class="fas fa-house-user fa-2x"></i></span>
                </div>

                <div class="company_profile_content">
                    <p> <%= @company.website %> </p>
                </div>
            </div>

            <div class="company_profile_category">
                <div class="company_profile_icon">
                    <span class="company_profile__icon"><i class="fas fa-location-arrow fa-2x"></i></span>
                </div>

                <div class="company_profile_content">
                    <%= @company.location %>
                </div>
            </div>
            
            <div class="company_profile_category">
                <div class="company_profile_icon">
                    <span class="company_profile__icon"><i class="fas fa-user-friends fa-2x"></i></span>
                </div>

                <div class="company_profile_content">
                    <%= @company.size %>
                </div>
            </div>

            <h3>Mô tả chung:</h3>
            <div class="company_profile_overview">
                <p><%= @company.overview %></p>
            </div>

            <h3>Đánh giá tiêu biểu:</h3>
            <%= render :partial => 'company_reviews/review_score' %>
            <span class="user_comment_heading"> Tất cả <%= @company.company_reviews.count%> Đánh giá về công ty </span>
            <%= render @company.company_reviews %>
        </div>
    </body>

</html>