<!doctype html>
<html>
    <head>
    <!-- Place your kit's code here -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

    <body>
        <div class="company_profile">

            <div class="company_profile_overview">
                <div class="company_profile_title">
                    <t> Giới thiệu về <%= @company.name %></t>
                </div>
                <div class="company_profile_content">
                    <div class="company_profile_detail">
                        <div class="company_profile_section">
                            <ul>
                                <li> Trụ sở chính </li>
                                <li> Trang web </li>
                                <li> Quy mô công ty </li>
                                <li> Năm thành lập </li>
                            </ul>
                        </div>

                        <div class="company_profile_content">
                            <ul>
                                <li> <%= @company.location %> </li>
                                <li> <%= @company.website %> </li>
                                <li> <%= @company.size %> </li>
                                <li> <%= @company.time_establish %> </li>
                        </div>
                    </div>

                    <div class="company_profile_detail">
                        <div class="company_profile_section">
                            <ul>
                                <li> Quốc gia </li>
                                <li> Lĩnh vực chính </li>
                                <li> Thời gian làm việc </li>
                                <li> Doanh thu </li>
                            </ul>
                        </div>

                        <div class="company_profile_content">
                            <ul>
                                <li> <%= @company.country %> </li>
                                <li> <%= @company.field_operetion %> </li>
                                <li> <%= @company.size %> </li>
                                <li> <%= @company.size %> </li>
                            </ul>
                        </div>
                    </div>

                    <div class="company_profile_summary">
                        <t><%= @company.content %></t>
                    </div>
                </div>
            </div>

            <div class="company_profile_review">
                <div class="company_profile_title">
                    <t> Mọi người đánh giá thế nào về <%= @company.name %></t>
                </div>
                <%= render :partial => 'company_reviews/review_score' %>
            </div>    

            <div class="company_profile_interview">
                <div class="company_profile_title">
                    <t> Những chia sẻ về kinh nghiệm phỏng vấn tại <%= @company.name %></t>
                </div>

                <%= render :partial => 'company_interviews/interview_score' %>
            </div>  
        </div>
    </body>

</html>