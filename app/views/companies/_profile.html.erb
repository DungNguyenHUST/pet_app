<!doctype html>
<html>
    <head>
    <!-- Place your kit's code here -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

    <body>
        <div class="company_profile">
            <div class="company_profile_overview">
                <div class="company_profile_block">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="company_profile_section">
                                <a> <i class="material-icons">foundation</i> Trụ sở chính </a>
                            </div>
                            <div class="company_profile_content">
                                <%= @company.location %>
                            </div>

                            <div class="company_profile_section">
                                <a> <i class="material-icons">link</i> Website </a>
                            </div>
                            <div class="company_profile_content">
                                <%= @company.website %>
                            </div>

                            <div class="company_profile_section">
                                <a> <i class="material-icons">phone</i> Số điện thoại </a>
                            </div>
                            <div class="company_profile_content">
                                <%= @company.phone %>
                            </div>
                        </div>

                        <div class="col-sm-3">

                            <div class="company_profile_section">
                                <a><i class="material-icons">people</i> Quy mô công ty </a>
                            </div>
                            <div class="company_profile_content">
                                <%= @company.size %>
                            </div>

                            <div class="company_profile_section">
                                <a> <i class="material-icons">event_available</i> Năm thành lập </a>
                            </div>
                            <div class="company_profile_content">
                                <%= @company.time_establish %>
                            </div>

                            <div class="company_profile_section">
                                <a> <i class="material-icons">money</i> Doanh thu </a>
                            </div>
                            <div class="company_profile_content">
                                <%= @company.time_end %>
                            </div>
                        </div>

                        <div class="col-sm-3">

                            <div class="company_profile_section">
                                <a> <i class="material-icons">flag</i> Quốc gia </a>
                            </div>
                            <div class="company_profile_content">
                                <%= @company.country %>
                            </div>

                            <div class="company_profile_section">
                                <a> <i class="material-icons">emoji_objects</i> Lĩnh vực chính </a>
                            </div>
                            <div class="company_profile_content">
                                <%= @company.field_operetion %>
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="company_profile_section">
                                <a> <i class="material-icons">history_toggle_off</i> Thời gian làm việc </a>
                            </div>
                            <div class="company_profile_content">
                                <%= @company.time_start.to_formatted_s(:long) %> -> <%= @company.time_end.to_formatted_s(:long)%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="company_profile_summary_block">
                <div class="company_profile_title">
                    <a>Giới thiệu <%= @company.name %></a>
                </div>

                <div class="company_profile_summary">
                    <a><%= @company.overview.html_safe %></a>
                </div>
            </div>

            <div class="company_profile_review">
                <div class="review_content">
                    <%= render :partial => 'company_reviews/review_score' %>
                </div>
            </div>    

            <div class="company_profile_interview">
                <div class="interview_content">
                    <%= render :partial => 'company_interviews/interview_score' %>
                </div>
            </div> 

            <div class="company_job">
                <div class="company_job_title">
                    <a> Việc làm mới từ <%= @company.name %></a>
                </div>
                <div class="job_content">
                    <%= render @company.company_jobs %>
                </div>
            </div> 
        </div>
    </body>

</html>