<%- model_class = Company -%>
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Add icon library -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
        <div class="body_content">
            <div class="companies_area">

                <div class="company_search_bar">
                    <%=form_tag companies_path, :method => "get" do%>
                        <div class="company_search_form">
                            <%= text_field_tag :search, params[:search], class: 'company_search_input'%>
                        </div>
                        <div class="company_search_button">
                            <%= submit_tag "Tìm kiếm", :name => nil, class: 'search_button'%>
                        </div>
                    <%end%>
                </div>

                <%if (@companies.count < @companies_all.count)%>
                    <div class="section_title">
                        <t>Tìm thấy <%=@companies.count%> kết quả</t>
                    </div>
                <% else %>
                    <div class="section_title">
                        <t>Tất cả các công ty</t>
                    </div>
                <%end%>

                <% @companies.each do |company| %>
                    <div class="single_company">
                    
                        <div class="company_thumbnail">
                            <%if company.avatar.attached?%>
                                <%= link_to (image_tag(company.avatar)), image_path(url_for(company.avatar)), rel: "gallery" , :href => company_path(company)%>
                            <%end%>
                        </div>

                        <div class="company_name">
                            <t><%= company.name%></t>
                        </div>
                        
                        <div class="company_summary">
                            <div class="company_rating">
                                <div class="review_score_star">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                </div>
                            </div>

                            <div class="review_point">
                                <t><i class="fa fa-edit"></i> <%= company.company_reviews.count %> đánh giá (4.1/5 điểm)</t>
                            </div>

                            <div class="company_location">
                                <p><i class="fa fa-map-marker"></i> <%= company.location %></p>
                            </div>
                        </div>

                        <div class="company_new_company">
                            <%= link_to '<button type="button">Viết đánh giá </button>'.html_safe, new_company_company_review_path(company) %>
                        </div>

                    </div>
                <%end%>

                <%# add new template%>
                <div class="single_company">
                    <div class="company_contents">
                        <div class="new-company">
                            <form action="/action_page.php">
                                <%= link_to '<button type="submit">Tạo thông tin công ty mới</button>'.html_safe, new_company_path %>
                            </form>
                        </div>
                    </div>
                </div>
                </div>
            </div>
    </body>
</html>