<div class="user_reply_solution_block">
    <div class="user_reply_solution_left">
        <div class="user_reply_comment_left">
            <div class="user_avatar_small">
                <%owner_user = owner_user(problem_reply_solution)%>
                <%if owner_user.present?%>
                    <%if owner_user.avatar?%>
                        <div class="user_avatar_small_img">
                            <%= link_to (image_tag(owner_user.avatar.thumb.url)), image_path(url_for(owner_user.avatar.thumb.url)), rel: "gallery" , :href => user_path(current_user)%>
                        </div>
                    <%else%>
                        <div class="user_avatar_small_text checked_<%=user_color(owner_user.name)%>">
                            <a><%= link_to owner_user.name[0], user_path(owner_user)%></a>
                        </div>
                    <%end%>
                <%else%>
                    <div class="user_avatar_small_default checked_0">
                        <a>A</a>
                    </div>
                <%end%>
            </div>
        </div>
    </div>

    <div class="user_reply_solution_cotent">
        <div class="user_reply_solution_body">
            <a><%= problem_reply_solution.reply_content %></a>
        </div>

        <div class="user_reply_solution_time">
            <a><%= problem_reply_solution.user_name %> Â· <%= time_ago_in_words(problem_reply_solution.created_at) %></a>
        </div>
    </div>
</div>