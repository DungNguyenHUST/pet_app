<div class="container">
    <div class="new_reply_solution_form">
        <%= form_for [@problem, @problem_solution, ProblemReplySolution.new] do |f| %>

            <div class="new_reply_solution_content">
                <div class="new_reply_solution_label">
                    <a><%= f.label :reply_content, "Nội dung", class: "new_reply_solution_label_content" %></a>
                </div>
                
                <div class="new_reply_solution_input_solution">
                    <%= f.text_area :reply_content, :required => true, class: "form-control-text", placeholder: "Nhập nội dung" %>
                </div>
            </div>

            <div class="new_reply_solution_submit">
                <%= f.submit "Gửi trả lời", class: "new_reply_solution_form_submit" %>
            </div>
        <%end%>
    </div>
</div>