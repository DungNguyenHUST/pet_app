<div class="interview_score_content">
    <div class="interview_score">
        <div class="row">
            <div class="col-sm-3">
                <div class="interview_score_difficult">
                    <div class="interview_point">
                        <strong><%=cal_rating_interview_difficultly_score(@company).round(1)%></strong>
                    </div>
                    <div class="interview_score_star">
                        <%if cal_rating_interview_difficultly_score(@company) > 0%>
                            <%cal_rating_interview_difficultly_score(@company).to_i.times do%>
                                <i class="material-icons checked">circle</i>
                            <%end%>
                            <%(5 - cal_rating_interview_difficultly_score(@company).to_i).to_i.times do%>
                                <i class="material-icons checked_out">radio_button_unchecked</i>
                            <%end%>
                        <%else%>
                            <%5.times do%>
                                <i class="material-icons checked_out">radio_button_unchecked</i>
                            <%end%>
                        <%end%>
                    </div>
                    <div class="interview_score_label">
                        <a>Độ khó bài phỏng vấn</a>
                    </div>
                </div>
            </div>

            <div class="col-sm-3">
                <div class="interview_score_satisfied">
                    <div class="interview_point">
                        <strong><%=cal_rating_interview_satisfied_score(@company).round(1)%></strong>
                    </div>
                    <div class="interview_score_star">
                        <%if cal_rating_interview_satisfied_score(@company) > 0%>
                            <%cal_rating_interview_satisfied_score(@company).to_i.times do%>
                                <i class="material-icons checked">circle</i>
                            <%end%>
                            <%(5 - cal_rating_interview_satisfied_score(@company).to_i).to_i.times do%>
                                <i class="material-icons checked_out">radio_button_unchecked</i>
                            <%end%>
                        <%else%>
                            <%5.times do%>
                                <i class="material-icons checked_out">radio_button_unchecked</i>
                            <%end%>
                        <%end%>
                    </div>
                    <div class="interview_score_label">
                        <a>Hài lòng với cuộc phỏng vấn</a>
                    </div>
                </div>
            </div>

            <div class="col-sm-3">
                <div class="interview_score_process">
                    <div class="interview_content">
                        <div class="interview_point">
                            <strong><%=cal_rating_interview_process_score(@company).round(1)%></strong>
                        </div>
                        <div class="interview_score_star">
                            <i class="material-icons-outlined checked">settings_input_svideo</i>
                        </div>
                        <div class="interview_score_label">
                            <a>Vòng phỏng vấn trung bình</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-3">
                <div class="interview_score_interview">
                    <div class="interview_content">
                        <div class="interview_point">
                            <%if @company.company_interviews.count > 0%>
                                <strong><%= cal_rating_interview_offer_score(@company)%>%</strong>
                            <%else%>
                                <strong>0%</strong>
                            <%end%>
                        </div>
                        <div class="interview_score_star">
                            <i class="material-icons-outlined checked">work_outline</i>
                        </div>
                        <div class="interview_score_label">
                            <a>Ứng viên chấp nhận offer</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>