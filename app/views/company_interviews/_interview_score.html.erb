<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Add icon library -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
        <div class="interview_score_content">
            <div class="interview_score_title">
                <t>Tổng quan chung</t>
            </div>
            <%# interview in button %>
            <div class="interview_new_button_side">
                <div class="interview_new_button">
                    <form action="/action_page.php">
                        <%= link_to '<button type="submit"> <i class="fa fa-edit"></i> Chia sẻ kinh nghiệm </button>'.html_safe, new_company_company_interview_path(@company) %>
                    </form>
                </div>
            </div>

            <div class="interview_score">
                <div class="interview_score_overview">
                    <div class="interview_content">
                        <div class="interview_point">
                            <strong><%=rating_interview_difficultly_score.round(1)%></strong>
                        </div>
                        <div class="interview_score_star">
                            <span class="fa fa-star checked"></span>
                        </div>
                        <div class="interview_score_label">
                            <t>Độ khó bài phỏng vấn</t>
                        </div>
                    </div>
                </div>

                <div class="interview_score_overview">
                    <div class="interview_content">
                        <div class="interview_point">
                            <strong><%=rating_interview_satisfied_score.round(1)%></strong>
                        </div>
                        <div class="interview_score_star">
                            <span class="fa fa-star checked"></span>
                        </div>
                        <div class="interview_score_label">
                            <t>Mức độ hài lòng</t>
                        </div>
                    </div>
                </div>

                <div class="interview_score_overview">
                    <div class="interview_content">
                        <div class="interview_point">
                            <strong><%=rating_interview_process_score.round(1)%></strong>
                        </div>
                        <div class="interview_score_label">
                            <t>Vòng phỏng vấn trung bình</t>
                        </div>
                    </div>
                </div>

                <div class="interview_score_overview">
                    <div class="interview_content">
                        <div class="interview_point">
                            <strong><%=rating_interview_offer_score.round(1) * 100%> %</strong>
                        </div>
                        <div class="interview_score_label">
                            <t>Chấp nhận offer</t>
                        </div>
                    </div>
                </div>

                <div class="interview_score_total">
                    <div class="interview_score_label">
                        <t>Đánh giá tổng quát</t>
                    </div>

                    <div class="interview_score_star">
                        <strong><%=rating_interview_total_score.round(1)%> </strong>
                        <%if rating_interview_total_score > 0%>
                            <%rating_interview_total_score.to_i.times do%>
                                <span class="fa fa-star checked"></span>
                            <%end%>
                            <%(5 - rating_interview_total_score.to_i).to_i.times do%>
                                <span class="fa fa-star checked_out"></span>
                            <%end%>
                        <%else%>
                            <%5.times do%>
                                <span class="fa fa-star checked_out"></span>
                            <%end%>
                        <%end%>
                    </div>

                    <div class="interview_total_des">
                        <t>Dựa trên <%= @company.company_interviews.count%> chia sẻ từ người dùng</t>
                    </div>

                </div>
            </div>
        </div>
    <body>
</html>