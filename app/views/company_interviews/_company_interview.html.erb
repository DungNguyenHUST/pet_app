<!DOCTYPE html>
<html>
    <head>
        <meta name='viewport' content='width=device-width, initial-scale=1'>
    </head>

    <body>
        <div class="company_interview_block">
            <div class="company_interview_left">
                <div class="company_avatar">
                    <%if @company.avatar.attached?%>
                        <%= link_to (image_tag(@company.avatar)), image_path(url_for(@company.avatar)), rel: "gallery" , :href => company_path(@company)%>
                    <%end%>
                </div>
            </div>

            <div class="company_interview_right">
                <div class="company_interview_title">
                    <strong><%= company_interview.position %></strong>
                </div>

                <div class="user_interview_status">
                    <t>Phỏng vấn qua <%= company_interview.get_interview %> - </t>
                    <t><%= company_interview.process %> vòng - </t>
                    <t> lúc <%= time_ago_in_words(company_interview.created_at) %></t>
                </div>

                <div class="interview_satisfied_overview">
                    <div class="interview_content">
                        <div class="interview_satisfied_label">
                            <strong>Hài lòng:</strong>
                        </div>
                        <div class="interview_score_star">
                            <%if company_interview.satisfied.to_i > 0%>
                                <%company_interview.satisfied.to_i.times do%>
                                    <i class="material-icons checked">star</i>
                                <%end%>
                                <%(5 - company_interview.satisfied.to_i).to_i.times do%>
                                    <i class="material-icons checked_out">star_outline</i>
                                <%end%>
                            <%else%>
                                <%5.times do%>
                                    <i class="material-icons checked_out">star_outline</i>
                                <%end%>
                            <%end%>
                        </div>
                    </div>
                </div>

                <div class="user_interview_offer">
                    <div class="user_interview_offer_label">
                        <strong>Chấp nhận offer: </strong>
                        <%if company_interview.satisfied.to_i >0%>
                            <i class="material-icons checked">check_circle_outline</i>
                            <t> Yes </t>
                        <% else %>
                            <i class="material-icons checked">clear</i>
                            <t> No </t>
                        <%end%>
                    </div>
                </div>

                <div class="company_interview_body">
                    <t><%= company_interview.content %></t>
                </div>

                <div class="interview_info">
                    <div class="interview_toolbar">
                        <t><%= company_interview.company_reply_interviews.count%></t>
                        <button class="reply_btn" onclick="myFunctionReplyInterview()"><i class="material-icons">chat_bubble</i> Trả lời </button>

                        <t><%= company_interview.company_reply_interviews.count%></t>
                        <%= link_to '<button class="like_btn"><i class="material-icons">thumb_up</i> Thích </button>'.html_safe, company_company_interview_company_reply_interviews_path(@company, company_interview), method: :post%>
                        
                        <t><%= company_interview.company_reply_interviews.count%></t>
                        <%= link_to '<button class="dislike_btn"><i class="material-icons">thumb_down</i> Không thích </button>'.html_safe, company_company_interview_company_reply_interviews_path(@company, company_interview), method: :post%>
                    </div>
                </div>

                <div class="interview_feedback">
                    <div class="report_button">
                        <%= link_to '<button type="submit"><i class="material-icons">flag</i> Báo cáo vi phạm</button>'.html_safe, sessions_new_path %>
                    </div>

                    <div class="share_button">
                        <%= link_to '<button type="submit"><i class="material-icons">share</i> Chia sẻ</button>'.html_safe, new_user_path %>
                    </div>
                </div>
            </div>
            <div class="new_reply_interview_form" id = "mydivInterview">
                <%= form_for [@company, company_interview, CompanyReplyInterview.new] do |f| %>

                    <div class="new_reply_interview_content">
                        <div class="new_reply_interview_input_interview">
                            <%= f.text_field :reply_content, class: "new_reply_interview_form_input_interview", placeholder: "  Gửi trả lời" %>
                        </div>
                    </div>

                    <div class="new_reply_interview_submit">
                        <button type="submit" class="new_reply_interview_form_submit">
                            <i class="material-icons">send</i>
                        </button>
                    </div>
                <%end%>
            </div>

            <script>
                function myFunctionReplyInterview() {
                    var x = document.getElementById("mydivInterview");
                    if (x.style.display == "none") {
                        x.style.display = "block";
                    } else {
                        x.style.display = "none";
                    }
                }
            </script>
        </div>
        
        <div class="reply_interview_content">
            <%if company_interview.company_reply_interviews.count > 0%>
                <button class="show_hide_reply_btn_show" onclick="myFunctionReplyInterviewShowHide()"><i class="material-icons">keyboard_arrow_down</i></button>
                <button class="show_hide_reply_btn_hide" onclick="myFunctionReplyInterviewShowHide()"><i class="material-icons">keyboard_arrow_up</i></button>
                <div class="interview_reply" id = "mydivShowHide">
                    <%= render company_interview.company_reply_interviews %>
                </div>
            <%end%>
            <script>
                function myFunctionReplyInterviewShowHide() {
                    var x = document.getElementById("mydivShowHide");
                    if (x.style.display == "none") {
                        x.style.display = "block";
                    } else {
                        x.style.display = "none";
                    }
                }
            </script>
        </div>
    </body>
</html>