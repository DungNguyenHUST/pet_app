<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="employer_apply_job_index">
                <div class="employer_apply_job_index_title">
                    <h3>Hồ sơ ứng tuyển</h3>
                </div>

                <div class="employer_apply_job_index_btn">
                    <%if auth_post_job_of_employer(current_employer)%>
                        <%= link_to 'Đăng tin mới', new_company_job_path, method: :get, class: "btn btn-primary" %>
                    <%else%>
                        <%= link_to 'Đăng tin mới', new_company_job_path, method: :get, class: "btn btn-primary disabled" %>
                    <%end%>
                </div>
                <%if @company_apply_jobs.total_count > 0%>
                    <div class="employer_apply_job_employer">
                        <div class="table-responsive">
                            <table class="table text-center table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 2%;">No.</th>
                                        <th style="width: 12%;">Họ và tên</th>
                                        <th style="width: 5%;">Email</th>
                                        <th style="width: 50%;">Việc làm</th>
                                        <th style="width: 12%;">Ngày ứng tuyển</th>
                                        <th style="width: 12%;">Hồ sơ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%@company_apply_jobs.each_with_index do |company_apply_job, index|%>
                                        <tr>
                                            <td><%=index + 1%></td>
                                            <td scope="row" class="text-start"><%=link_to (company_apply_job.name), company_job_company_apply_job_path(company_apply_job.company_job, company_apply_job)%></td>
                                            <td><%=company_apply_job.email%></td>
                                            <td scope="row" class="text-start"><%=link_to (company_apply_job.company_job.title), employer_job_path(:id => company_apply_job.company_job.id)%></td>
                                            <td><%=company_apply_job.created_at.strftime("%B %d, %Y")%></td>
                                            <%if company_apply_job.cover_vitate?%>
                                                <td> <%=link_to "Download", company_apply_job.cover_vitate.url%></td>
                                            <%end%>
                                        </tr>
                                    <%end%>
                                </tbody>
                            </table>
                        </div>
                        <%= paginate @company_apply_jobs, window: 2%>
                    </div>
                <%else%>
                    <div class="employer_apply_job_not_found_block">
                        <div class="employer_apply_job_not_found_icon">
                            <i class="material-icons">pending_actions</i>
                        </div>
                        <div class="employer_apply_job_not_found">
                            <span>Rất tiếc, hiện tại bạn chưa có hồ sơ ứng tuyển nào</span>
                        </div>
                        <div class="employer_apply_job_not_found_action">
                            <div class="employer_apply_job_button">
                                <%= link_to '<button type="submit"> <i class="material-icons-outlined">arrow_back</i> <span> Quay trở lại trang việc làm</span> </button>'.html_safe, employer_path(current_employer, tab: 'EmployerJobID')%>
                            </div>
                        </div>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>