<div class="container">
	<div class="employer_update_form">
		<%= form_for @employer, html: {class: "form-horizontal"} do |f| %>
			<div class="employer_update_title">
				<h3>Thay đổi thông tin tài khoản, <%= @employer.name%></h3>
			</div>
			
			<div class="row">
				<div class="col-sm-6">
					<div class="employer_update_section">
						<div class="employer_update_content">
							<div class="employer_update_label">
								<a><%= f.label :name, "Tên đăng nhập", class: "employer_update_label_name" %></a>
							</div>

							<div class="employer_update_input">
								<%= f.text_field :name, class: "form-control", placeholder: "Nhập tên hoặc email của bạn" %>
							</div>
						</div>
						
						<div class="employer_update_content">
							<div class="employer_update_label">
								<a><%= f.label :phone, "Số điện thoại", class: "employer_update_label_name" %></a>
							</div>

							<div class="employer_update_input">
								<%= f.text_field :phone, class: "form-control", placeholder: "Nhập số điện thoại của bạn" %>
							</div>
						</div>

						<div class="employer_update_content">
							<div class="employer_update_label">
								<a><%= f.label :email, "Địa chỉ email", class: "employer_update_label_name" %></a>
							</div>

							<div class="employer_update_input">
								<%= f.text_field :email, class: "form-control", placeholder: "Nhập địa chỉ email của bạn" %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="employer_update_section">
						<div class="employer_update_content">
							<div class="employer_update_label">
								<a><%= f.label :company_name, "Tên công ty", class: "employer_update_label" %></a>
							</div>

							<div class="employer_update_input">
								<%= f.text_field :company_name, class: "form-control"%>
							</div>
						</div>

						<div class="employer_update_content">
							<div class="employer_update_label">
								<a><%= f.label :company_field, "Lĩnh vực hoạt động công ty", class: "employer_update_label" %></a>
							</div>

							<div class="employer_update_input">
								<%= f.text_field :company_field, class: "form-control"%>
							</div>
						</div>

                        <div class="employer_update_content">
							<div class="employer_update_label">
								<a><%= f.label :address, "Địa chỉ liên hệ công ty", class: "employer_update_label" %></a>
							</div>

							<div class="employer_update_input">
								<%= f.text_field :address, class: "form-control"%>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="employer_update_submit">
				<%= f.submit "Lưu thay đổi", class: "employer_update_form_submit" %>
			</div>
		<%end%>
	</div>
</div>