<div class="employer_wellcome_block">
    <div class="employer_wellcome_intro_block">
        <div class="container">
            <div class='row'>
                <div class='col-sm-5'>
                    <div class="employer_wellcome_left_block">
                        <div class="employer_wellcome_bar_label">
                            <h3><%=t(:wellcome_employer_label)%>.</h3>
                        </div>
                        <div class="employer_wellcome_button">
                            <%= link_to new_employer_registration_path do%>
                                <button type="submit"><span><%=t(:wellcome_employer_sub_1)%></span> <i class="material-icons-outlined">arrow_forward</i></button>
                            <%end%>
                        </div>
                        <div class="employer_wellcome_login">
                            <%=t(:wellcome_employer_sub_2)%> <a><%= link_to t(:signin), new_employer_session_path %></a>
                        </div>
                    </div>
                </div>
                <div class='col-sm-7'>
                    <div class="employer_wellcome_right_block">
                        <%=image_tag("others/employer_background.jpg")%>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="employer_wellcome_price_block">
            <div class="employer_wellcome_price_label">
                <h3><%=t(:list_of_service)%></h3>
            </div>
            <div class="employer_wellcome_price_detail">
                <div class="row">
                    <div class="col-lg-4 col-md-12 mb-4">
                        <div class="card card1 h-100">
                            <div class="card-body">
                                <h5 class="card-title">F-Basic</h5>
                                    <small class='text-muted'><%=t(:cost_save)%></small>
                                <br><br>
                                    <span class="h2">0<%=t(:vnd_short)%></span>/<%=t(:month)%>
                                <br><br>
                                <div class="d-grid my-3">
                                    <%= link_to employer_plan_path do %>
                                        <button class="btn btn-outline-dark btn-block"><%=t(:free)%></button>
                                    <%end%>
                                </div>
                                <ul>
                                    <li><%=t(:free_post_job)%></li>
                                    <li><%=t(:pro_mana_job)%></li>
                                    <li><%=t(:support_247)%></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-12 mb-4">
                        <div class="card card2 h-100">
                            <div class="card-body">
                                <h5 class="card-title">F-Eco</h5>
                                <small class='text-muted'><%=t(:mosted_use)%></small>
                                <br><br>
                                <span class="h2">499.000<%=t(:vnd_short)%></span>/<%=t(:month)%> <mark>-20%</mark>
                                <br><br>
                                <div class="d-grid my-3">
                                    <%= link_to employer_plan_path do %>
                                        <button class="btn btn-outline-dark btn-block"><%=t(:buy_now)%></button>
                                    <%end%>
                                </div>
                                <ul>
                                    <li><%=t(:free_post_job)%></li>
                                    <li><%=t(:highlight_search)%></li>
                                    <li><%=t(:support_247)%></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-12 mb-4">
                        <div class="card card3 h-100">
                            <div class="card-body">
                                <h5 class="card-title">F-Pro</h5>
                                <small class='text-muted'><%=t(:high_efficiency)%></small>
                                <br><br>
                                    <span class="h2">999.000<%=t(:vnd_short)%></span>/<%=t(:month)%> <mark>-25%</mark>
                                <br><br>
                                <div class="d-grid my-3">
                                    <%= link_to employer_plan_path do %>
                                        <button class="btn btn-outline-dark btn-block"><%=t(:buy_now)%></button>
                                    <%end%>
                                </div>
                                <ul>
                                    <li><%=t(:find_candidate)%></li>
                                    <li><%=t(:highlight_search)%></li>
                                    <li><%=t(:support_247)%></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>

            <div class="employer_wellcome_price_compare_label">
                <h3><%=t(:view_compare_service)%></h3>
            </div>

            <div class="employer_wellcome_price_compare_detail">
                <div class="table-responsive">
                    <table class="table text-center table-hover">
                        <thead>
                            <tr>
                                <th style="width: 34%;"></th>
                                <th style="width: 22%;">F-Basic</th>
                                <th style="width: 22%;">F-Eco</th>
                                <th style="width: 22%;">F-Pro</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row" class="text-start"><%=t(:free_post_job)%></th>
                                <td><%=t(:unlimit)%></td>
                                <td><%=t(:unlimit)%></td>
                                <td><%=t(:unlimit)%></td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-start"><%=t(:highlight_search)%></th>
                                <td></td>
                                <td><i class="material-icons-outlined">check</i></td>
                                <td><i class="material-icons-outlined">check</i></td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-start"><%=t(:highlight_title_job)%></th>
                                <td></td>
                                <td><i class="material-icons-outlined">check</i></td>
                                <td><i class="material-icons-outlined">check</i></td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-start"><%=t(:find_candidate)%></th>
                                <td></td>
                                <td></td>
                                <td><i class="material-icons-outlined">check</i></td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-start"><%=t(:brand_ad)%></th>
                                <td></td>
                                <td></td>
                                <td><i class="material-icons-outlined">check</i></td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-start"><%=t(:support_247)%></th>
                                <td><i class="material-icons-outlined">check</i></td>
                                <td><i class="material-icons-outlined">check</i></td>
                                <td><i class="material-icons-outlined">check</i></td>
                            </tr>
                        </tbody>
                    </table>
                </div> 
            </div>

            <div class="employer_wellcome_support_block">
                <div class="employer_wellcome_support_label">
                    <h3><%=t(:contact_us)%></h3>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="employer_wellcome_support_contact">
                            <ul>
                                <li><a>Email: <span>hotro.firework@gmail.com</span></a></li>
                                <li><a>Hotline: <span>0338275427</span></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="employer_wellcome_support_signup">
                            <%= link_to new_employer_session_path do%>
                                <button>
                                    <i class="material-icons-outlined">work_outline</i>
                                    <span><%=t(:employer_register)%></span>
                                </button>
                            <%end%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>