<%= form_for [@company, CompanyReview.new] do |f| %>
    <div class="container">
        <div class="sessions">
            <section class="signup">
                <div class="container">
                    <div class="signup-content">
                        <h2 class="form-title">Hãy đánh giá về công ty này</h2>

                        <div class="form-group">
                            <%= f.label :score, "Cho điểm cty này", class: "col-md-2 control-label" %>
                            <div class="col-md-6">
                                <%= f.text_field :score, class: "form-input-content", placeholder: "Hãy cho điểm từ 1->5" %>
                            </div>
                        </div>

                        <div class="form-group">
                            <%= f.label :review, "Nhập đánh giá về công ty", class: "col-md-2 control-label" %>
                            <div class="col-md-6">
                                <%= f.text_field :review, class: "form-input-content", placeholder: "Hãy viết nhận xét của bạn" %>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-4">
                                <%= f.submit "Submit", class: "form-submit" %>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
<% end %>