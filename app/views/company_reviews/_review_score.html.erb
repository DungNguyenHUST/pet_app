<div class="review_score_content">
    <div class="review_score">
        <div class='row'>
            <div class="col-sm-6 custom-padding-right">
                <div class="review_score_total">
                    <div class="review_score_label">
                        <a>Đánh giá tổng quát</a>
                    </div>

                    <div class="review_score_star">
                        <div class="review_point">
                            <strong><%=cal_rating_review_total_score(@company).to_f.round(1)%> </strong>
                        </div>
                        <div class="review_score_star_des">
                            <%if cal_rating_review_total_score(@company) > 0%>
                                <%cal_rating_review_total_score(@company).to_i.times do%>
                                    <i class="material-icons checked">circle</i>
                                <%end%>
                                <%(5 - cal_rating_review_total_score(@company).to_i).to_i.times do%>
                                    <i class="material-icons checked_out">radio_button_unchecked</i>
                                <%end%>
                            <%else%>
                                <%5.times do%>
                                    <i class="material-icons checked_out">radio_button_unchecked</i>
                                <%end%>
                            <%end%>
                        </div>
                    </div>

                    <div class="review_total_des">
                        <a>Dựa trên <%= convert_number_to_human(@company.company_reviews.count)%> đánh giá từ nhân viên</a>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 custom-padding-left">
                <div class="review_score_recommand">  
                    <div class="review_score_recommand_title">
                        <a>Khuyến khích làm việc tại đây</a>
                    </div>

                    <div class="review_score_recommand_block">
                        <div class="review_circle_box" style="--p:<%=cal_rating_review_recommend(@company)%>;">
                        </div>
                        <div class="review_score_recommand">
                            <a><%=cal_rating_review_recommend(@company)%>%</a>
                        </div>
                    </div>
                    <style>
                        .review_circle_box {
                            --v:calc( ((18/5) * var(--p) - 90)*1deg);
                            width: 100px;
                            height: 100px;
                            display: inline-block;
                            margin-left: 34%;
                            margin-top: 5px;
                            border-radius: 50%;
                            padding: 10px;
                            background:
                                linear-gradient(var(--v), #f2f2f2     50%,transparent 0) 0/min(100%,(50 - var(--p))*100%),
                                linear-gradient(var(--v), transparent 50%,#febb02        0) 0/min(100%,(var(--p) - 50)*100%),
                                linear-gradient(to right, #f2f2f2 50%,#febb02 0);
                            -webkit-mask:
                                linear-gradient(#fff 0 0) content-box,
                                linear-gradient(#fff 0 0);
                            -webkit-mask-composite:destination-out;
                            mask-composite:exclude;
                        }
                    </style>
                </div>
            </div>
        </div>
    </div>
</div>