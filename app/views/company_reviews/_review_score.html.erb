<div class="review_score_block">
    <div class="review_score">
        <div class='row'>
            <div class="col-sm-3">
                <div class="review_score_total">
                    <div class="review_score_star">
                        <div class="review_label">
                            <a><%=t(:overall_review)%></a>
                        </div>
                        <div class="review_total_block">
                            <a>
                                <span><%=cal_rating_review_total_score(@company).to_f.round(1)%></span>
                                <span class="material-icons checked">circle</span>
                            </a>
                        </div>
                    </div>

                    <div class="review_score_recommand">
                        <div class="review_score_recommand_title">
                            <a><%=t(:company_review_recommand)%></a>
                        </div>
                        <div class="review_score_recommand_block">
                            <div class="flex-wrapper-review">
                                <div class="single-chart-review">
                                    <svg viewBox="0 0 36 36" class="circular-chart orange">
                                        <path class="circle-bg"
                                            d="M18 2.0845
                                                a 15.9155 15.9155 0 0 1 0 31.831
                                                a 15.9155 15.9155 0 0 1 0 -31.831"
                                        />
                                        <path class="circle"
                                            stroke-dasharray="<%=cal_rating_review_recommend(@company)%>, 100"
                                            d="M18 2.0845
                                                a 15.9155 15.9155 0 0 1 0 31.831
                                                a 15.9155 15.9155 0 0 1 0 -31.831"
                                        />
                                        <text x="18" y="20.35" class="percentage-review"><%=cal_rating_review_recommend(@company)%>%</text>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-5">
                <div class="review_score_content">
                    <div class="review_score_progress">
                        <div class="progress_section">
                            <div class="progress_label">
                                <a>1 stars</a>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: <%=cal_rating_category_percent(@company, "overall", 1)%>%" aria-valuenow="<%=cal_rating_category_percent(@company, "overall", 1)%>" aria-valuemin="0" aria-valuemax="100"><%=cal_rating_category_percent(@company, "overall", 1)%>%</div>
                            </div>
                        </div>
                        <div class="progress_section">
                            <div class="progress_label">
                                <a>2 stars</a>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: <%=cal_rating_category_percent(@company, "overall", 2)%>%" aria-valuenow="<%=cal_rating_category_percent(@company, "overall", 2)%>" aria-valuemin="0" aria-valuemax="100"><%=cal_rating_category_percent(@company, "overall", 2)%>%</div>
                            </div>
                        </div>
                        <div class="progress_section">
                            <div class="progress_label">
                                <a>3 stars</a>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: <%=cal_rating_category_percent(@company, "overall", 3)%>%" aria-valuenow="<%=cal_rating_category_percent(@company, "overall", 3)%>" aria-valuemin="0" aria-valuemax="100"><%=cal_rating_category_percent(@company, "overall", 3)%>%</div>
                            </div>
                        </div>
                        <div class="progress_section">
                            <div class="progress_label">
                                <a>4 stars</a>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: <%=cal_rating_category_percent(@company, "overall", 4)%>%" aria-valuenow="<%=cal_rating_category_percent(@company, "overall", 4)%>" aria-valuemin="0" aria-valuemax="100"><%=cal_rating_category_percent(@company, "overall", 4)%>%</div>
                            </div>
                        </div>
                        <div class="progress_section">
                            <div class="progress_label">
                                <a>5 stars</a>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: <%=cal_rating_category_percent(@company, "overall", 5)%>%" aria-valuenow="<%=cal_rating_category_percent(@company, "overall", 5)%>" aria-valuemin="0" aria-valuemax="100"><%=cal_rating_category_percent(@company, "overall", 5)%>%</div>
                            </div>
                        </div>
                        <div class="progress_section_total">
                            <span><%=t(:base_on)%> <%=count_rating_category("overall", @company)%> <%=t(:review).downcase%></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-sm-4">
                <div class="review_score_detail">
                    <p class="review_score_detail_title"><%=t(:env_review)%></p>
                    <span>
                        <p><%=cal_rating_review_work_env_score(@company).round(1)%></p>
                        <i class="material-icons">circle</i>
                    </span>
                    <p class="review_score_detail_title"><%=t(:salary_review)%></p>
                    <span>
                        <p><%=cal_rating_review_salary_score(@company).round(1)%></p>
                        <i class="material-icons">circle</i>
                    </span>
                    <p class="review_score_detail_title"><%=t(:ot_review)%></p>
                    <span>
                        <p><%=cal_rating_review_ot_score(@company).round(1)%></p>
                        <i class="material-icons">circle</i>
                    </span>
                    <p class="review_score_detail_title"><%=t(:mng_review)%></p>
                    <span>
                        <p><%=cal_rating_review_manager_score(@company).round(1)%></p>
                        <i class="material-icons">circle</i>
                    </span>
                    <p class="review_score_detail_title"><%=t(:career_review)%></p>
                    <span>
                        <p><%=cal_rating_review_career_score(@company).round(1)%></p>
                        <i class="material-icons">circle</i>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>