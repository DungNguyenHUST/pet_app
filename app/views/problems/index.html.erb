                        <script type="text/javascript">
                            $(function() { 
                                $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                                    localStorage.setItem('lastTab', $(this).attr('href'));
                                });

                                var lastTab = localStorage.getItem('lastTab');
                                if (lastTab) {
                                    $('[href="' + lastTab + '"]').tab('show');
                                }
                            });
                        </script>

                        <div class="problem_new_button">
                            <%= link_to '<button type="submit"> <i class="material-icons">add</i>Tạo câu hỏi mới</button>'.html_safe, new_problem_path %>
                        </div>
                    </div>
                    
                    <div class="col-sm-4">
                        <div class="problem_top">
                            <a><i class="material-icons">list</i>Top câu hỏi hot</a>
                            <div class="problem_short">
                                <%i = 0%>
                                <% @problems_newest.each do |problem| %>
                                    <%i += 1%>
                                    <%break if i > 10%>
                                    <div class="problem_label">
                                        <%= link_to problem.title, problem_path(problem) %>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                        <div class="problem_company">
                            <a><i class="material-icons">corporate_fare</i>Câu hỏi theo công ty</a>
                            <div class="problem_short">
                                <%i = 0%>
                                <% @problems.each do |problem| %>
                                    <%i += 1%>
                                    <%break if i > 10%>
