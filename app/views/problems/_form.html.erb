<%= form_for @problem, :html => { :class => "form-horizontal problem" } do |f| %>

<%# Show error %>
  <% if @problem.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@problem.errors.count, "Lỗi") %> đã xảy ra lỗi khi lưu bài viết:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @problem.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<%# Show editor content %>
  <div class="container">
    <div class="sessions">
    </div>
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <h2 class="form-title">Tạo công ty mới</h2>
                    <div class="form-group">
                        <%= f.label :title, "Vấn đề cần giải quyết", class: "col-md-2 control-label" %>
                        <div class="col-md-6">
                        <%= f.text_field :title, class: "form-input", placeholder: "Nhập vấn đề cần giải quyết" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :content, "Nội dung", class: "col-md-2 control-label" %>
                        <div class="col-md-6">
                        <%= f.text_field :content, class: "form-input", placeholder: "Nhập nội dung" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-4">
                        <%= f.submit "Submit", class: "form-submit" %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<% end %>