<div class="container">
    <div class='user_dasboard'>
        <div class='user_title'>
            <%if (0..12).cover? Time.now.hour %>
                <span><%=t(:good_morning)%>, <%=current_user.name%>!</span>
            <%elsif (12..18).cover? Time.now.hour %>
                <span><%=t(:good_after)%>, <%=current_user.name%>!</span>
            <%elsif (18..24).cover? Time.now.hour %>
                <span><%=t(:good_eve)%>, <%=current_user.name%>!</span>
            <%end%>
        </div>

        <div class="user_tab_link">
            <ul class="nav">
                <li class="nav-item">
                    <%if @tab == "default" || @tab == "PersonalID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                 
                    <a class="nav-link <%=active%>" href="<%=user_path(current_user, tab: 'PersonalID')%>"><i class="material-icons-outlined">person</i><%=t(:user_personal_info)%></a>
                </li>
                <li class="nav-item">
                    <%if @tab == "SaveJobID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=user_path(current_user, tab: 'SaveJobID')%>"><i class="material-icons-outlined">bookmark_border</i><%=t(:user_saved_job)%> <span><%= convert_number_to_human(@company_job_saved.total_count)%><span> </a>
                </li>
                <li class="nav-item">
                    <%if @tab == "ApplyJobID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=user_path(current_user, tab: 'ApplyJobID')%>"><i class="material-icons-outlined">check</i><%=t(:user_applied_job)%> <span><%= convert_number_to_human(@company_job_applied.total_count)%><span> </a>
                </li>
                <li class="nav-item">
                    <%if @tab == "CompanyFollowID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=user_path(current_user, tab: 'CompanyFollowID')%>"><i class="material-icons-outlined">favorite_border</i><%=t(:user_followed_company)%> <span><%= convert_number_to_human(@company_followed.total_count)%><span> </a>
                </li>
                <li class="nav-item">
                    <%if @tab == "ProblemID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=user_path(current_user, tab: 'ProblemID')%>"><i class="material-icons-outlined">lightbulb</i><%=t(:user_interview_question)%> <span><%= convert_number_to_human(@problem_created.total_count)%><span> </a>
                </li>
                <li class="nav-item">
                    <%if @tab == "NotificationID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=user_path(current_user, tab: 'NotificationID')%>"><i class="material-icons-outlined">notifications</i><%=t(:noti)%> <span><%= convert_number_to_human(@user_notifications.total_count)%><span> </a>
                </li>
                <li class="nav-item">
                    <%if @tab == "CoverVitaeID"%>
                        <%active = "active"%>
                    <%else%> 
                        <%active = ""%>
                    <%end%>                                     
                    <a class="nav-link <%=active%>" href="<%=user_path(current_user, tab: 'CoverVitaeID')%>"><i class="material-icons-outlined">content_copy</i><%=t(:user_cv)%> <span><%= convert_number_to_human(@cv_created.total_count)%><span> </a>
                </li>
            </ul>
        </div>

        <div class="user_tab_content">
            <%if @tab == "default" || @tab == "PersonalID"%>
                <div class="user_personal_tab">
                    <div class="user_info">
                        <div class="user_info_des_label">
                            <strong> <%=t(:account_info)%></strong>
                        </div>

                        <div class="user_info_about">

                            <div class="user_info_label">
                                <strong><%=t(:full_name)%>:</strong>
                            </div>

                            <div class="user_info_des">
                                <%=current_user.name %>
                            </div>

                            <div class="user_info_edit_button">
                                <i class="fa fa-edit"></i> <%= link_to t(:change_name), edit_user_path(current_user), class: "user_info_edit_link_to" %>
                            </div>

                            <div class="user_info_label">
                                <strong><%=t(:email)%>:</strong>
                            </div>

                            <div class="user_info_des">
                                <%=current_user.email %>
                            </div>

                            <div class="user_info_edit_button">
                                <i class="fa fa-edit"></i><%= link_to t(:change_email), edit_user_path(current_user), class: "user_info_edit_link_to"  %>
                            </div>

                            <div class="user_info_label">
                                <strong><%=t(:phone)%>:</strong>
                            </div>

                            <div class="user_info_des">
                                <%=current_user.phone %>
                            </div>

                            <div class="user_info_edit_button">
                                <i class="fa fa-edit"></i><%= link_to t(:change_phone), edit_user_path(current_user), class: "user_info_edit_link_to"  %>
                            </div>

                            <div class="user_info_label">
                                <strong><%=t(:address)%>:</strong>
                            </div>

                            <div class="user_info_des">
                                <%=current_user.address %>
                            </div>

                            <div class="user_info_edit_button">
                                <i class="fa fa-edit"></i><%= link_to t(:change_address), edit_user_path(current_user), class: "user_info_edit_link_to"  %>
                            </div>
                        </div>

                        <div class="user_log_out">
                            <%= button_to destroy_user_session_path, method: :delete do%>
                                <span><%=t(:logout)%></span>
                            <%end%>
                        </div>
                    </div>
                </div>
            <%end%>

            <%if @tab == "SaveJobID"%>
                <div class="user_save_job_tab">
                    <%if @company_job_saved.total_count > 0%>
                        <div class="user_save_job">
                            <div class="row">
                                <%@company_job_saved.each do |company_job|%>
                                    <div class="col-sm-12 col_no_padding_small_screen">
                                        <%=render company_job%>
                                    </div>
                                <%end%>
                            </div>
                            <div class="company_job_paginate">
                                <%= paginate @company_job_saved, window: 2%>
                            </div>
                        </div>
                    <%else%>
                        <div class="user_save_job_not_found_block">
                            <div class="user_save_job_not_found_icon">
                                <i class="material-icons">work</i>
                            </div>
                            <div class="user_save_job_not_found">
                                <span><%=t(:user_not_save_job)%></span>
                            </div>
                        </div>
                    <%end%>  
                </div>
            <%end%>

            <%if @tab == "ApplyJobID"%>
                <div class="company_apply_job_tab">
                    <%if @company_job_applied.total_count > 0%>
                        <div class="company_apply_job">
                            <%if @company_job_applied != nil%>
                                <div class="row">
                                    <%@company_job_applied.each do |company_job|%>
                                        <div class="col-sm-12 col_no_padding_small_screen">
                                            <%=render company_job%>
                                        </div>
                                    <%end%>
                                </div>
                            <%end%>
                            <div class="company_job_paginate">
                                <%= paginate @company_job_applied, window: 2%>
                            </div>
                        </div>
                    <%else%>
                        <div class="user_apply_job_not_found_block">
                            <div class="user_apply_job_not_found_icon">
                                <i class="material-icons">work</i>
                            </div>
                            <div class="user_apply_job_not_found">
                                <span><%=t(:user_not_applied_job)%></span>
                            </div>
                        </div>
                    <%end%>  
                </div>
            <%end%>

            <%if @tab == "CompanyFollowID"%>
                <div class="user_follow_company_tab">
                    <%if @company_followed.total_count > 0%>
                        <div class="user_follow_company_list">
                            <div class="row">
                                <%@company_followed.each do |company|%>
                                    <div class="col-sm-4">
                                        <%=render company%>
                                    </div>
                                <%end%>
                            </div>

                            <%= paginate @company_followed, window: 2%>
                        </div>
                    <%else%>
                        <div class="user_follow_company_not_found_block">
                            <div class="user_follow_company_not_found_icon">
                                <i class="material-icons">business</i>
                            </div>
                            <div class="user_follow_company_not_found">
                                <span><%=t(:user_not_follow_company)%></span>
                            </div>
                        </div>
                    <%end%>  
                </div>
            <%end%>

            <%if @tab == "NotificationID"%>
                <div class="user_notification_tab">
                    <%if @user_notifications.total_count > 0%>
                        <div class="user_notification_block">
                            <%=render @user_notifications%>
                        </div>
                        <%= paginate @user_notifications, window: 2%>
                    <%else%>
                        <div class="user_notification_not_found_block">
                            <div class="user_notification_not_found_icon">
                                <i class="material-icons">notifications</i>
                            </div>
                            <div class="user_notification_not_found">
                                <span><%=t(:user_have_no_noti)%></span>
                            </div>
                        </div>
                    <%end%>
                </div>
            <%end%>

            <%if @tab == "ProblemID"%>
                <div class="user_problem_tab">
                    <%if @problem_created.total_count > 0%>
                        <div class="user_problem_block">
                            <%=render @problem_created%>
                        </div>
                        <%= paginate @problem_created, window: 2%>
                    <%else%>
                        <div class="user_problem_not_found_block">
                            <div class="user_problem_not_found_icon">
                                <i class="material-icons">lightbulb</i>
                            </div>
                            <div class="user_problem_not_found">
                                <span><%=t(:user_have_no_question)%></span>
                            </div>
                        </div>
                    <%end%>
                </div>
            <%end%>

            <%if @tab == "CoverVitaeID"%>
                <div class="user_cv_tab">
                    <%if @cv_created.total_count > 0%>
                        <div class="user_cv_block">
                            <div class="row">
                                <%@cv_created.each do |cover_vitae|%>
                                    <div class="col-sm-4">
                                        <%= render :partial => 'cover_vitaes/copy_cover_vitae', :locals => {:cover_vitae => cover_vitae} %>
                                    </div>
                                <%end%>
                            </div>
                        </div>
                        <%= paginate @cv_created, window: 2%>
                    <%else%>
                        <div class="user_cv_not_found_block">
                            <div class="user_cv_not_found_icon">
                                <i class="material-icons">content_copy</i>
                            </div>
                            <div class="user_cv_not_found">
                                <span><%=t(:user_have_no_cv)%></span>
                            </div>
                        </div>
                    <%end%>
                </div>
            <%end%>
        </div>
    </div>
</div>