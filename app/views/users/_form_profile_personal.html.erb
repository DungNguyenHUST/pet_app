<div class="user_profile_personal_form">
    <%= form_for(@user, remote: true) do |f| %>
        <div class="row">
            <div class="col-sm-6">
                <div class="user_profile_personal_content">
                    <div class="user_profile_personal_label">
                        <a><%= f.label :first_name, "Họ", class: "user_profile_personal_label_name" %></a>
                    </div>

                    <div class="user_profile_personal_input">
                        <%= f.text_field :first_name, class: "form-control", placeholder: "Nhập họ của bạn ex: Nguyễn, Trần..." %>
                    </div>
                </div>

                <div class="user_profile_personal_content">
                    <div class="user_profile_personal_label">
                        <a><%= f.label :last_name, "Tên", class: "user_profile_personal_label_name" %></a>
                    </div>

                    <div class="user_profile_personal_input">
                        <%= f.text_field :last_name, class: "form-control", placeholder: "Nhập tên đệm và tên chính của bạn ex: Văn An..." %>
                    </div>
                </div>

                <div class="user_profile_personal_content">
                    <div class="user_profile_personal_label">
                        <a><%= f.label :phone, "Số điện thoại liên hệ", class: "user_profile_personal_label_name" %></a>
                    </div>

                    <div class="user_profile_personal_input">
                        <%= f.text_field :phone, class: "form-control", placeholder: "Nhập số điện thoại liên hệ: ex: 0123456789" %>
                    </div>
                </div>

                <div class="user_profile_personal_content">
                    <div class="user_profile_personal_label">
                        <a><%= f.label :address, "Địa chỉ", class: "user_profile_personal_label_name" %></a>
                    </div>

                    <div class="user_profile_personal_input">
                        <%= f.text_field :address, class: "form-control", placeholder: "Nhập địa chỉ hiện tại của bạn: ex: Hà Nội" %>
                    </div>
                </div>
                
                <div class="user_profile_personal_content">
                    <div class="user_profile_personal_label">
                        <a><%= f.label :sex, "Giới tính", class: "user_profile_personal_label_name" %></a>
                    </div>

                    <div class="user_profile_personal_input">
                        <%= f.select(:sex, options_for_select(['Nam', 'Nữ', "Không xác định"], 'Không xác định'), {include_blank: false}, { :class => 'form-select' }) %>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="user_profile_personal_content">
                    <div class="user_profile_personal_label">
                        <a><%= f.label :birthday, "Ngày sinh", class: "user_profile_personal_label_name" %></a>
                    </div>

                    <div class="user_profile_personal_input">
                        <%= f.date_field :birthday, class: "form-control", placeholder: "Ngày sinh nhật" %>
                    </div>
                </div>

                <div class="user_profile_personal_content">
                    <div class="user_profile_personal_label">
                        <a><%= f.label :matrimony, "Tình trạng hôn nhân", class: "user_profile_personal_label_name" %></a>
                    </div>

                    <div class="user_profile_personal_input">
                        <%= f.select(:matrimony, options_for_select(['Đã kết hôn', 'Chưa kết hôn'], 'Chưa kết hôn'), {include_blank: false}, { :class => 'form-select' }) %>
                    </div>
                </div>

                <div class="user_profile_personal_content">
                    <div class="user_profile_personal_label">
                        <a><%= f.label :highest_education, "Học vấn cao nhất", class: "user_profile_personal_label_name" %></a>
                    </div>

                    <div class="user_profile_personal_input">
                        <%= f.text_field :highest_education, class: "form-control", placeholder: "Học vấn cao nhất bạn đạt được" %>
                    </div>
                </div>

                <div class="user_profile_personal_content">
                    <div class="user_profile_personal_label">
                        <a><%= f.label :highest_career, "Chức vụ cao nhất", class: "user_profile_personal_label_name" %></a>
                    </div>

                    <div class="user_profile_personal_input">
                        <%= f.text_field :highest_career, class: "form-control", placeholder: "Chức vụ cao nhất bạn từng làm" %>
                    </div>
                </div>
            </div>
            <div class="user_profile_personal_content">
                <div class="user_profile_personal_label">
                    <a><%= f.label :summary, "Giới thiệu bản thân", class: "user_profile_personal_label_name" %></a>
                </div>

                <div class="user_profile_personal_input">
                    <%= f.text_area :summary, class: "form-control", placeholder: "Giới thiệu bản thân, mục tiêu nghề nghiệp..." %>
                    <%= tinymce :medium %>
                </div>
            </div>
        </div>

        <div class="user_profile_personal_submit">
            <%= f.submit "Lưu thay đổi", class: "user_profile_personal_form_submit" %>
        </div>
    <%end%>
</div>