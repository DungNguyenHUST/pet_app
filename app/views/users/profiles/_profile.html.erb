                    </div>
                    <%if @user.user_adwards.count == 0%>
                        <div class="user_profile_adward_guide">
                            <div class="row">
                                <div class="col-9">
                                    <div class="user_profile_adward_guide_label">
                                        <a><%=t(:adward_help)%></a>
                                    </div>
                                    <button class="user_profile_adward_update_btn" onclick="myFunctionUserAdward('profile_adward_form')"><i class="material-icons-outlined">edit</i> <a><%=t(:update)%></a> </button>
                                </div>
                                <div class="col-3">
                                    <div class="user_profile_adward_image">
