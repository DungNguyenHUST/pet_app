<div class="user_profile_container" id="user_profile_container">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <div class="user_profile_info">
                    <div class="user_profile_info_detail_block" id="profile_info_detail">
                        <%= render :partial => 'users/profiles/info'%>
                    </div>

                    <div class="user_profile_info_form_block" id="profile_info_form">
                        <%= render :partial => 'users/profiles/form_info'%>
                    </div>

                    <script>
                        function myFunctionUserInfo(id) {
                            var x = document.getElementById(id);
                            if (x.style.display == "block") 
                            {
                                x.style.display = "none";
                            } 
                            else 
                            {
                                x.style.display = "block";
                            }
                        }
                    </script>
                </div>

                <div class="user_profile_personal">
                    <div class="user_profile_personal_label">
                        <h3><%t(:user_personal_info)%></h3>
                    </div>

                    <div class="user_profile_personal_form_block" id="profile_personal_form">
                        <%= render :partial => 'users/profiles/form_personal'%>
                    </div>

