            <div class="col-sm-4">
                <div class="user_profile_action">
                    <div class="user_profile_action_label">
                        <h3><%=t(:profile_setting)%></h3>
                    </div>
                    <div class="user_profile_action_public">
                        <%= form_for(@user, remote: true) do |f| %>
                            <div class="user_profile_action_input">
                                <%= f.radio_button :public, true, :checked => true, onchange: "javascript:this.form.commit.click();" %>
                                <a><%= f.label :public, t(:public_mode), :value => "true" %></a>
                                <br>
                                <span><%=t(:public_mode_sub)%></span>
                            </div>
                            <div class="user_profile_action_input">
                                <%= f.radio_button :public, false, onchange: "javascript:this.form.commit.click();" %>
                                <a><%= f.label :public, t(:private_mode), :value => "false" %></a>
                                <br>
                                <span><%=t(:private_mode_sub)%></span>
                            </div>
                            <%= f.submit 'LÆ°u', class: "user_profile_action_submit" %>
                        <%end%>
                    </div>
                </div>
            </div>
