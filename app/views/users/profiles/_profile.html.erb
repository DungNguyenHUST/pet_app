                    <div class="user_profile_exp_label">
                        <h3><%=t(:work_exp)%></h3>
                    </div>
                    <%if @user.user_experiences.count == 0%>
                        <div class="user_profile_exp_guide">
                            <div class="row">
                                <div class="col-9">
                                    <div class="user_profile_exp_guide_label">
                                        <a><%=t(:help_work_exp)%></a>
                                    </div>
                                    <button class="user_profile_exp_update_btn" onclick="myFunctionUserExp('profile_exp_form')"><i class="material-icons-outlined">edit</i> <a><%=t(:update)%></a> </button>
                                </div>
                                <div class="col-3">
                                    <div class="user_profile_exp_image">
                                        <%= image_tag "icons/profile_exp.png"%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <%else%>
                        <button class="user_profile_exp_add_btn" onclick="myFunctionUserExp('profile_exp_form')"><i class="material-icons-outlined">add_circle_outline</i></button>
