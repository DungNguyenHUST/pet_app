<% content_for :meta_title, "Đăng nhập" %>
<% content_for :meta_description, "Đăng nhập để khám phá những thông tin hữu ích về công ty, việc làm giúp bạn chinh phục công việc mơ ước..." %>
<div class='user_session_container'>
    <div class="container">
        <div class='user_session_block'>
            <div class="user_signin_top_label">
                <div class="user_signin_title">
                    <a><%=t(:signin)%></a>
                    <i class="material-icons-outlined">account_circle</i>
                </div>
            </div>
            <div class="user_signin_form_right">
                <div class="login_with_google">
                    <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post do%>
                        <%=image_tag("icons/google.svg")%>
                        <span><%=t(:signin_with_google)%></span>
                    <%end%>
                </div>
                <div class="login_with_facebook">
                    <%= button_to user_facebook_omniauth_authorize_path, method: :post do%>
                        <%=image_tag("icons/facebook.svg")%>
                        <span><%=t(:signin_with_facebook)%></span>
                    <%end%>
                </div>
            </div>

            <div class="user_signin_or">
                <a><span><%=t(:or)%></span></a>
            </div>

            <div class="user_signin_form_left">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="user_signin_label">
                        <a><%= f.label :email, t(:email), class: "user_signin_label_name" %></a>
                    </div>

                    <div class="user_signin_input">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", :required => true, class: "form-control", placeholder: t(:enter_email) %>
                    </div>
                    
                    <div class="user_signin_label">
                        <a><%= f.label :password, t(:password), class: "user_signin_label_name" %></a>
                    </div>

                    <div class="user_signin_input">
                        <%= f.password_field :password, autocomplete: "current-password", :required => true, class: "form-control", placeholder: t(:enter_password) %>
                    </div>

                    <div class="user_signin_remember">
                        <% if devise_mapping.rememberable? %>
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me, t(:remember_signin), class: "user_signin_label_small" %>
                        <% end %>
                    </div>
                    
                    <div class="user_signin_forgot_pass">
                        <a><%= link_to t(:forgot_password), new_password_path(resource_name) %></a>
                    </div>

                    <div class="user_signin_submit">
                        <%= f.submit t(:signin), class: "user_signin_form_submit" %>
                    </div>
                <%end%>
            </div>

            <div class="user_signin_loginhere">
                <%=t(:have_no_account)%><a><%= link_to t(:signup), new_user_registration_path %></a>
            </div>
        </div>
    </div>
</div>

