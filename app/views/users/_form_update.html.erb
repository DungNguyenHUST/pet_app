<div class="container">
	<div class="user_update_form">
		<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
			<div class="user_update_title">
				<h3><%=t(:update_user)%> <%= @user.name%></h3>
			</div>
			
			<div class="row">
				<div class="col-sm-6">
					<div class="user_update_section">
						<div class="user_update_content">
							<div class="user_update_label">
								<a><%= f.label :name, t(:full_name), class: "user_update_label_name" %></a>
							</div>

							<div class="user_update_input">
								<%= f.text_field :name, class: "form-control", placeholder: t(:enter_name) %>
							</div>
						</div>
						
						<div class="user_update_content">
							<div class="user_update_label">
								<a><%= f.label :phone, t(:phone), class: "user_update_label_name" %></a>
							</div>

							<div class="user_update_input">
								<%= f.text_field :phone, class: "form-control", placeholder: t(:enter_phone) %>
							</div>
						</div>

						<div class="user_update_content">
							<div class="user_update_label">
								<a><%= f.label :address, t(:address), class: "user_update_label_name" %></a>
							</div>

							<div class="user_update_input">
								<%= f.text_field :address, class: "form-control", placeholder: t(:enter_address) %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="user_update_section">
						<div class="user_update_content">
							<div class="user_update_label">
								<a><%= f.label :cover_letter_attach, t(:upload_cv), class: "user_update_label" %></a>
							</div>

							<div class="user_update_input">
								<%= f.file_field :cover_letter_attach, class: "form-control"%>
							</div>
						</div>

						<div class="user_update_content">
							<div class="user_update_label">
								<a><%= f.label :avatar, t(:avatar), class: "user_update_label" %></a>
							</div>

							<div class="user_update_input">
								<%= f.file_field :avatar, class: "form-control"%>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			<div class="user_update_section_content">
				<div class="user_update_content">
					<div class="user_update_label">
						<a><%= f.label :cover_letter, t(:self_introduce), class: "user_update_label_name" %></a>
					</div>

					<div class="user_update_input">
						<%= f.text_area :cover_letter, :class => "tinymce"%>
						<%= tinymce :medium %>
					</div>
				</div>
			</div>

			<div class="user_update_submit">
				<%= f.submit t(:save), class: "user_update_form_submit" %>
			</div>
		<%end%>
	</div>
</div>