<div class="user_profile_form">
    <%= form_for([@user, user_adward], remote: true) do |f| %> 
        <div class="user_profile_title_sub">
            <a>Lưu ý: Mục có dấu <span>'*'</span> là bắt buộc</a>
        </div>
        <div class="user_profile_content">
            <div class="user_profile_label">
                <a><%= f.label :adward_name, "Tên giải thưởng", class: "user_profile_label_name" %><span>*</span></a>
            </div>

            <div class="user_profile_input">
                <%= f.text_field :adward_name, :required => true, class: "form-control", placeholder: "Ex: Giải nhất Toán toàn quốc,..."%>
            </div>
        </div>

        <div class="user_profile_content">
            <div class="user_profile_label">
                <a><%= f.label :receive_date, "Ngày nhận giải thưởng", class: "user_profile_label_name" %><span>*</span></a>
            </div>

            <div class="user_profile_input">
                <%= f.date_field :receive_date, :required => true, class: "form-control"%>
            </div>
        </div>

        <div class="user_profile_content">
            <div class="user_profile_label">
                <a><%= f.label :adward_summary, "Mô tả về giải thưởng(khoảng 300 từ)", class: "user_profile_label_name" %><span>*</span></a>
            </div>

            <div class="user_profile_input">
                <%= f.text_area :adward_summary, class: "form-control", placeholder: "..." %>
                <%= tinymce :mini %>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
            </div>
            <div class="col-sm-3">
                <div class="user_profile_cancel">
                    <button class="user_profile_cancel_btn" onclick="myFunctionUserAdward('profile_adward_form')"><a>Hủy bỏ</a></button>
                </div>
            </div>

            <div class="col-sm-3">
                <div class="user_profile_submit">
                    <%= f.submit "Cập nhật", class: "user_profile_form_submit"%>
                </div>
            </div>
        </div>
    <%end%>
</div>