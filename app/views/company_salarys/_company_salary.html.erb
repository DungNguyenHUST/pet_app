<div class="user_salary_block" id="company_salary_block_<%=company_salary.id%>">
    <div class="user_salary_intro">
        <div class="user_salary_intro_left">
            <div class="user_avatar_small">
                <%owner_user = find_owner_user(company_salary)%>
                <%if !company_salary.privacy? && owner_user.present?%>
                    <%if owner_user.avatar?%>
                        <div class="user_avatar_small_img">
                            <%= link_to (image_tag(owner_user.avatar.thumb.url)), image_path(url_for(owner_user.avatar.thumb.url)), rel: "gallery" , :href => user_path(owner_user)%>
                        </div>
                    <%else%>
                        <div class="user_avatar_small_text checked_<%=find_user_color(owner_user.name)%>">
                            <a><%= link_to owner_user.name[0], user_path(owner_user), class: "user_name_label"%></a>
                        </div>
                    <%end%>
                <%else%>
                    <div class="user_avatar_small_default checked_0">
                        <a>A</a>
                    </div>
                <%end%>
            </div>

            <div class="user_info">
                <div class="user_name">
                    <a><%=company_salary.user_name%></a>
                </div>
                <div class="user_time_salary">
                    <a><%= time_ago_in_words(company_salary.created_at) %></a>
                </div>
            </div>
        </div>

        <div class="user_salary_intro_right">
            <div class="user_salary_score_star">
                <div class="salary_point">
                </div>
                <div class="salary_score_star">
                    <a><%=cal_rating_salary_score(company_salary).to_f.round(1)%> </a>
                    <%cal_rating_salary_score(company_salary).to_i.times do%>
                        <i class="material-icons checked">circle</i>
                    <%end%>
                    <%(5 - cal_rating_salary_score(company_salary).to_i).to_i.times do%>
                        <i class="material-icons checked_out">radio_button_unchecked</i>
                    <%end%>
                </div>
            </div>

            <div class="user_salary_title">
                <%if company_salary.salary_title.present?%>
                    <a><%= company_salary.salary_title%></a>
                <%else%>
                    <a><%= company_salary.position%></a>
                <%end%>
            </div>

            <div class="user_salary_status">
                    <a><%= company_salary.position %></a>
                    <%if company_salary.working_status%>
                        <a> · Nhân viên đang làm việc</a>
                    <%else%>
                        <a> · Đã nghỉ việc</a>
                    <%end%>
                    <a> · Làm việc <%= company_salary.working_time%></a>
            </div>

            <div class="user_salary_cotent">
                <%if company_salary.salary.present?%>
                    <div class="user_salary_body">
                        <a><%= company_salary.salary.html_safe %></a>
                    </div>
                <%end%>
                <div class="user_salary_pros">
                    <div class="user_salary_pros_label">
                        <i class="material-icons-outlined checked">check_circle_outline</i>
                        <strong>Ưu điểm</strong>
                    </div>
                    <div class="user_salary_pros_content">
                        <%if company_salary.pros.present?%>
                            <a><%= company_salary.pros.html_safe %></a>
                        <%else%>
                            <a>---</a>
                        <%end%>
                    </div>
                </div>

                <div class="user_salary_cons">
                    <div class="user_salary_cons_label">
                        <i class="material-icons-outlined checked">clear</i>
                        <strong>Nhược điểm</strong>
                    </div>
                    <div class="user_salary_cons_content">
                        <%if company_salary.cons.present?%>
                            <a><%= company_salary.cons.html_safe %></a>
                        <%else%>
                            <a>---</a>
                        <%end%>
                    </div>
                </div>

                <div class="salary_info">
                    <div class="salary_toolbar">
                        <div class="salary_reply_block">
                            <%if user_signed_in?%>
                                <button class="reply_btn" onclick="myFunctionReplysalary(<%=company_salary.id%>)"><i class="material-icons-outlined">chat_bubble_outline</i> <span><%= company_salary.company_reply_salarys.count%></span> <a>Trả lời</a> </button>
                            <%else%>
                                <%= button_to new_user_session_path, :method => :get, form_class: "reply_btn" do%>
                                    <i class="material-icons-outlined">chat_bubble_outline</i> <span><%= company_salary.company_reply_salarys.count%></span> <a>Trả lời</a>
                                <%end%>
                            <%end%>
                        </div>

                        <div class="salary_like_block" id="like_salary_<%=company_salary.id%>">
                            <%if user_signed_in?%>
                                <% pre_like = company_salary.company_like_salarys.find { |like| like.user_id == current_user.id} %>
                                <% if pre_like %>  
                                    <%= button_to company_company_salary_company_like_salary_path(@company, company_salary, pre_like), method: :delete, remote: true, form_class: "like_btn_highlight" do %>
                                        <i class="material-icons">thumb_up</i> <span><%= company_salary.company_like_salarys.count%></span> <a>Thích</a>
                                    <%end%>
                                <%else%>
                                    <%= button_to company_company_salary_company_like_salarys_path(@company, company_salary, pre_like), method: :post, remote: true, form_class: "like_btn" do %>
                                        <i class="material-icons-outlined">thumb_up</i> <span><%= company_salary.company_like_salarys.count%></span> <a>Thích</a>
                                    <%end%>
                                <%end%>
                            <%else%>
                                <%= button_to new_user_session_path, :method => :get, form_class: "like_btn" do%>
                                    <i class="material-icons-outlined">thumb_up</i> <span><%= company_salary.company_like_salarys.count%></span> <a>Thích</a>
                                <%end%>
                            <%end%>
                        </div>

                        <div class="salary_dislike_block" id="dislike_salary_<%=company_salary.id%>">
                            <%if user_signed_in?%>
                                <% pre_dislike = company_salary.company_dislike_salarys.find { |dislike| dislike.user_id == current_user.id} %>
                                <% if pre_dislike %>
                                    <%= button_to company_company_salary_company_dislike_salary_path(@company, company_salary, pre_dislike), :method => :delete, remote: true, form_class: "dislike_btn_highlight" do%>
                                        <i class="material-icons">thumb_down</i> <span><%= company_salary.company_dislike_salarys.count%></span> <a>Không thích</a>
                                    <%end%> 
                                <%else%>
                                    <%= button_to company_company_salary_company_dislike_salarys_path(@company, company_salary), method: :post, remote: true, form_class: "dislike_btn" do%>
                                        <i class="material-icons-outlined">thumb_down</i> <span><%= company_salary.company_dislike_salarys.count%></span> <a>Không thích</a>
                                    <%end%> 
                                <%end%>
                            <%else%>
                                <%= button_to new_user_session_path, :method => :get, form_class: "dislike_btn" do%>
                                    <i class="material-icons-outlined">thumb_down</i> <span><%= company_salary.company_dislike_salarys.count%></span> <a>Không thích</a>
                                <%end%>
                            <%end%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="new_reply_salary_form_internal" id ="<%=company_salary.id%>">
            <%= form_for([@company, company_salary, CompanyReplysalary.new], remote: true) do |f| %>
                <div class="new_reply_salary_content">
                    <div class="new_reply_salary_input_salary">
                        <%= f.text_area :reply_content, :required =>true, class: "form-control", placeholder: "Nhập câu trả lời của bạn tại đây" %>
                    </div>
                </div>

                <div class="new_reply_salary_submit">
                    <button type="submit" class="new_reply_salary_form_submit">
                        <i class="material-icons-outlined">send</i>
                    </button>
                </div>
            <%end%>
        </div>
    </div>
    
    <script>
        function myFunctionReplysalary(id) {
            var x = document.getElementById(id);
            if (x.style.display == "block") 
            {
                x.style.display = "none";
            } 
            else 
            {
                x.style.display = "block";
            }
        }
    </script>

    <div class="reply_salary_content">
        <%if company_salary.company_reply_salarys.count > 0%>
            <div class="salary_reply">
                <%= render company_salary.company_reply_salarys %>
            </div>
        <%end%>
    </div>
</div>