<div class="user_profile_form">
    <%= form_for([@user, user_experience], remote: true) do |f| %> 
        <div class="row">
            <div class="col-sm-6">
                <div class="user_profile_content">
                    <div class="user_profile_label">
                        <a><%= f.label :job_level, "Chức danh hiện tại của bạn", class: "user_profile_label_name" %></a>
                    </div>

                    <div class="user_profile_input">
                        <%= f.text_field :job_level, :required => true, class: "form-control", placeholder: "Ex: Nhân viên, Giám đốc..."%>
                    </div>
                </div>

                <div class="user_profile_content">
                    <div class="user_profile_label">
                        <a><%= f.label :company_name, "Công ty", class: "user_profile_label_name" %></a>
                    </div>

                    <div class="user_profile_input">
                        <%= f.text_field :company_name, :required => true, class: "form-control", placeholder: "Ex: Vingroup, Viettel..."%>
                    </div>
                </div>

                <div class="user_profile_content">
                    <div class="user_profile_label">
                        <a><%= f.label :company_location, "Địa điểm công ty", class: "user_profile_label_name" %></a>
                    </div>

                    <div class="user_profile_input">
                        <%= f.select(:company_location, options_for_select(['Hà Nội','TP Hồ Chí Minh','Đà Nẵng','An Giang','Bà Rịa Vũng Tàu','Bạc Liêu','Bắc Kạn','Bắc Giang',
                                                            'Bắc Ninh','Bến Tre','Bình Dương','Bình Định','Bình Phước',
                                                            'Bình Thuận','Cà Mau','Cao Bằng','Cần Thơ','Đắk Lắk','Đắk Nông','Điện Biên',
                                                            'Đồng Nai','Đồng Tháp','Gia Lai','Hà Giang','Hà Nam','Hà Tây','Hà Tĩnh',
                                                            'Hải Dương','Hải Phòng','Hòa Bình','Hậu Giang','Hưng Yên','Khánh Hòa',
                                                            'Kiên Giang','Kon Tum','Lai Châu','Lào Cai',
                                                            'Lạng Sơn','Lâm Đồng','Long An','Nam Định','Nghệ An',
                                                            'Ninh Bình','Ninh Thuận','Phú Thọ','Phú Yên','Quảng Bình',
                                                            'Quảng Nam','Quảng Ngãi','Quảng Ninh','Quảng Trị',
                                                            'Sóc Trăng','Sơn La','Tây Ninh','Thái Bình','Thái Nguyên' ,
                                                            'Thanh Hóa','Thừa Thiên Huế','Tiền Giang','Trà Vinh',
                                                            'Tuyên Quang','Vĩnh Long','Vĩnh Phúc','Yên Bái' ], "Hà Nội"), {include_blank: false, :required => true}, { :class => 'form-select' }) %>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="user_profile_content">
                    <div class="user_profile_label">
                        <a><%= f.label :start_date, "Thời gian bắt đầu", class: "user_profile_label_name" %></a>
                    </div>

                    <div class="user_profile_input">
                        <%= f.date_field :start_date, :required => true, class: "form-control"%>
                    </div>
                </div>

                <div class="user_profile_content">
                    <div class="user_profile_label">
                        <a><%= f.label :end_date, "Thời gian kết thúc", class: "user_profile_label_name" %></a>
                    </div>

                    <div class="user_profile_input">
                        <%= f.date_field :end_date, :required => true, class: "form-control"%>
                    </div>
                </div>
            </div>
        </div>

        <div class="user_profile_content">
            <div class="user_profile_label">
                <a><%= f.label :job_summary, "Mô tả quá trình làm việc", class: "user_profile_label_name" %></a>
            </div>

            <div class="user_profile_input">
                <%= f.text_area :job_summary, class: "form-control", placeholder: "Giới thiệu quá trình làm việc, thành tựu..." %>
                <%= tinymce :mini %>
            </div>
        </div>

        <div class="user_profile_content">
            <div class="user_profile_input_radio">
                <%= f.check_box :enrolled, type: "checkbox"%>
                <a><%= f.label :enrolled, "Tôi đang làm việc tại đây"%></a>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
            </div>
            <div class="col-sm-3">
                <div class="user_profile_cancel">
                    <button class="user_profile_cancel_btn" onclick="myFunctionUserExp('profile_exp_form')"><a>Hủy bỏ</a></button>
                </div>
            </div>

            <div class="col-sm-3">
                <div class="user_profile_submit">
                    <%= f.submit "Cập nhật", class: "user_profile_form_submit"%>
                </div>
            </div>
        </div>
    <%end%>
</div>