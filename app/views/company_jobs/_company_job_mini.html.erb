<div class="company_job_block_mini">
    <%company = company_job.company%>
    <div class="company_job_mini_avatar">
        <%if company.avatar?%>
            <img><%= link_to (image_tag(company.avatar.thumb.url)), image_path(url_for(company.avatar.thumb.url)), rel: "gallery" , :href => company_path(company)%>
        <%end%>
    </div>

    <div class="company_job_mini_info">
        <div class="company_job_mini_title">
            <a><%= link_to (company_job.title), company_company_job_path(company, company_job), target: :_blank %></a>
        </div>

        <div class="company_job_mini_location">
            <a><i class="material-icons-outlined">place</i><%= company_job.location %></a>
        </div>

        <div class="company_job_mini_date">
            <a><%= time_ago_in_words(company_job.created_at) %></a>
        </div>
    </div>
</div>