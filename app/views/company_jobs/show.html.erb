<%# Google job structure data start %>
<%if @company_job.typical == "Full Time" || @company_job.typical == "Toàn thời gian"%>
    <%employmentType = "FULL_TIME"%>
<%elsif @company_job.typical == "Part Time" || @company_job.typical == "Bán thời gian"%>
    <%employmentType = "PART_TIME"%>
<%elsif @company_job.typical == "Remote" || @company_job.typical == "Làm việc từ xa"%>
    <%employmentType = "FULL_TIME"%>
<%elsif @company_job.typical == "Tạm thời"%>
    <%employmentType = "TEMPORARY"%>
<%elsif @company_job.typical == "Thực tập sinh"%>
    <%employmentType = "INTERN"%>
<%else%>
    <%employmentType = "OTHER"%>
<%end%>
<script type="application/ld+json">
{
    "@context" : "https://schema.org/",
    "@type" : "JobPosting",
    "title" : "<%=@company_job.title%>",
<%if @company_job.description.present?%>
    "description" : "<%=@company_job.description%>",
<%else%>
    "description" : "<%=@company_job.detail%>",
<%end%>
    "identifier": {
        "@type": "PropertyValue",
        "name": "Firework",
        "value": "1234567"
    },
    "datePosted" : "<%=@company_job.created_at%>",
    "validThrough" : "<%=@company_job.end_date%>",
    "employmentType" : "<%=employmentType%>",
    "hiringOrganization" : {
        "@type" : "Organization",
        "name" : "<%=company_name_meta%>",
        "sameAs" : "<%=@company_job.address%>",
    <%if @company.present? && @company.avatar?%>
        "logo" : "<%= image_url(@company.avatar.thumb.url) %>"
    <%else%>
        "logo" : "<%= image_url("defaults/company_avatar_default.png") %>"
    <%end%>
    },
    "jobLocation": {
    "@type": "Place",
        "address": {
        "@type": "PostalAddress",
    <%if @company_job.address.present?%>
        "streetAddress": "<%=@company_job.address%>",
    <%else%>
        "streetAddress": "<%=@company_job.location%>",
    <%end%>
        "addressLocality": "<%=@company_job.location%>",
        "addressRegion": "VN",
        "postalCode": "100000",
        "addressCountry": "VN"
        }
    },

    "baseSalary": {
        "@type": "MonetaryAmount",
        "currency": "VND",
        "value": {
        "@type": "QuantitativeValue",
    <%if @company_job.salary_min%>
        "minValue": <%=@company_job.salary_min%>,
    <%else%>
        "minValue": 0,
    <%end%>
    <%if @company_job.salary_max%>
        "maxValue": <%=@company_job.salary_max%>,
    <%else%>
        "maxValue": 0,
    <%end%>
        "unitText": "MONTH"
        }
    }
}
</script>
